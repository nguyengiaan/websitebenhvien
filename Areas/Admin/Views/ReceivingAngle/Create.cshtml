@model websitebenhvien.Models.EnitityVM.ReceivingAngleVM
@{
    ViewData["Title"] = "Tạo Góc Tiếp Nhận";
}

<div class="container-fluid mt-4">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-plus-circle text-primary me-2"></i>
                Tạo Góc Tiếp Nhận
            </h1>
            <p class="mb-0 text-muted">Thêm mới góc tiếp nhận cho trang web</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>
            Quay lại danh sách
        </a>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Form Card -->
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12">
            <div class="card shadow border-0">
                <div class="card-header py-3 bg-gradient-primary">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-edit me-2"></i>
                        Thông tin Góc Tiếp Nhận
                    </h6>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data" id="receivingAngleForm">
                        <div class="row">
                            <!-- Title Field -->
                            <div class="col-md-12 mb-4">
                                <label asp-for="title" class="form-label fw-bold required">
                                    <i class="fas fa-heading text-primary me-2"></i>
                                    Tiêu đề
                                </label>
                                <input asp-for="title" class="form-control form-control-lg border-left-primary" 
                                       placeholder="Nhập tiêu đề góc tiếp nhận..." />
                                <span asp-validation-for="title" class="text-danger small"></span>
                            </div>

                            <!-- Description Field -->
                            <div class="col-md-12 mb-4">
                                <label asp-for="description" class="form-label fw-bold">
                                    <i class="fas fa-align-left text-primary me-2"></i>
                                    Mô tả
                                </label>
                                <textarea asp-for="description" class="form-control border-left-primary" rows="4"
                                          placeholder="Nhập mô tả chi tiết..."></textarea>
                                <div class="form-text text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Mô tả chi tiết về nội dung góc tiếp nhận
                                </div>
                                <span asp-validation-for="description" class="text-danger small"></span>
                            </div>

                            <!-- Link Field -->
                            <div class="col-md-12 mb-4">
                                <label asp-for="link" class="form-label fw-bold">
                                    <i class="fas fa-link text-primary me-2"></i>
                                    Đường dẫn liên kết
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white">
                                        <i class="fas fa-globe"></i>
                                    </span>
                                    <input asp-for="link" class="form-control form-control-lg" 
                                           placeholder="Ví dụ: https://example.com hoặc /page-url" />
                                </div>
                                <div class="form-text text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    URL đầy đủ hoặc đường dẫn tương đối
                                </div>
                                <span asp-validation-for="link" class="text-danger small"></span>
                            </div>

                            <!-- Image Upload Field -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="formFile" class="form-label fw-bold">
                                    <i class="fas fa-image text-primary me-2"></i>
                                    Hình ảnh
                                </label>
                                <div class="custom-file-upload">
                                    <input asp-for="formFile" type="file" class="form-control" id="imageFile"
                                           accept="image/*" />
                                    <div class="file-upload-preview mt-3" id="filePreview" style="display: none;">
                                        <div class="preview-container p-3 border rounded bg-light">
                                            <h6 class="mb-2">Xem trước:</h6>
                                            <img id="previewImage" src="" alt="Preview" class="img-thumbnail" 
                                                 style="max-width: 200px; max-height: 200px;" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-text text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Chấp nhận các định dạng: PNG, JPG, GIF. Kích thước tối đa: 5MB
                                </div>
                                <span asp-validation-for="formFile" class="text-danger small"></span>
                            </div>

                            <!-- Order and Status Fields -->
                            <div class="col-md-6 mb-4">
                                <div class="row">
                                    <!-- Order Field -->
                                    <div class="col-12 mb-3">
                                        <label asp-for="order" class="form-label fw-bold">
                                            <i class="fas fa-sort-numeric-up text-primary me-2"></i>
                                            Thứ tự hiển thị
                                        </label>
                                        <input asp-for="order" type="number" class="form-control border-left-primary" 
                                               placeholder="Nhập số thứ tự..." min="0" />
                                        <div class="form-text text-muted">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Số thứ tự hiển thị (số nhỏ hiển thị trước)
                                        </div>
                                        <span asp-validation-for="order" class="text-danger small"></span>
                                    </div>

                                    <!-- Status Field -->
                                    <div class="col-12">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-toggle-on text-primary me-2"></i>
                                            Trạng thái
                                        </label>
                                        <div class="form-check form-switch">
                                            <input asp-for="status" class="form-check-input" type="checkbox" 
                                                   id="statusSwitch" checked />
                                            <label class="form-check-label" for="statusSwitch">
                                                <span id="statusLabel">Đã kích hoạt</span>
                                            </label>
                                        </div>
                                        <div class="form-text text-muted">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Bật/tắt hiển thị góc tiếp nhận trên trang web
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <hr class="my-4">
                                <div class="d-flex justify-content-between align-items-center">
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                        <i class="fas fa-times me-2"></i>
                                        Hủy bỏ
                                    </a>
                                    <button type="submit" class="btn btn-primary btn-lg px-5" id="submitBtn">
                                        <i class="fas fa-save me-2"></i>
                                        Tạo Góc Tiếp Nhận
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .border-left-primary {
        border-left: 4px solid #4e73df !important;
    }
    
    .custom-file-upload {
        position: relative;
    }
    
    .preview-container {
        background: linear-gradient(135deg, #f8f9fc 0%, #e9ecef 100%);
        border: 2px dashed #4e73df !important;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #4e73df;
        box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
    }
    
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    
    .btn {
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .alert {
        border-radius: 10px;
        border: none;
    }
    
    .required::after {
        content: " *";
        color: #e74c3c;
        font-weight: bold;
    }
    
    .form-check-input:checked {
        background-color: #4e73df;
        border-color: #4e73df;
    }
    
    .form-check-input:focus {
        border-color: #4e73df;
        box-shadow: 0 0 0 0.25rem rgba(78, 115, 223, 0.25);
    }
</style>

<!-- JavaScript for Enhanced Functionality -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const fileInput = document.getElementById('imageFile');
        const filePreview = document.getElementById('filePreview');
        const previewImage = document.getElementById('previewImage');
        const submitBtn = document.getElementById('submitBtn');
        const statusSwitch = document.getElementById('statusSwitch');
        const statusLabel = document.getElementById('statusLabel');
        
        // File preview functionality
        fileInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                // Validate file size (5MB max)
                if (file.size > 5 * 1024 * 1024) {
                    alert('Kích thước file không được vượt quá 5MB!');
                    fileInput.value = '';
                    filePreview.style.display = 'none';
                    return;
                }
                
                // Validate file type
                if (!file.type.startsWith('image/')) {
                    alert('Vui lòng chọn file hình ảnh!');
                    fileInput.value = '';
                    filePreview.style.display = 'none';
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    filePreview.style.display = 'block';
                    
                    // Add animation
                    filePreview.style.opacity = '0';
                    setTimeout(() => {
                        filePreview.style.transition = 'opacity 0.3s ease';
                        filePreview.style.opacity = '1';
                    }, 100);
                };
                reader.readAsDataURL(file);
            } else {
                filePreview.style.display = 'none';
            }
        });
        
        // Status switch functionality
        statusSwitch.addEventListener('change', function() {
            statusLabel.textContent = this.checked ? 'Đã kích hoạt' : 'Chưa kích hoạt';
        });
        
        // Form submission with loading state
        document.getElementById('receivingAngleForm').addEventListener('submit', function() {
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Đang tạo...';
            submitBtn.disabled = true;
        });
        
        // Auto-hide alerts after 5 seconds
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            setTimeout(() => {
                if (alert.parentNode) {
                    alert.style.transition = 'opacity 0.5s ease';
                    alert.style.opacity = '0';
                    setTimeout(() => {
                        if (alert.parentNode) {
                            alert.remove();
                        }
                    }, 500);
                }
            }, 5000);
        });
        
        // Auto-generate order number
        const orderInput = document.querySelector('input[name="order"]');
        if (orderInput && !orderInput.value) {
            orderInput.value = Math.floor(Math.random() * 100) + 1;
        }
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}