@{
    ViewData["Title"] = "Quản lý phân quyền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Quản lý phân quyền</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-primary" onclick="showAddModal()">
                            <i class="fas fa-plus"></i> Thêm mới
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <table id="roleTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>STT </th>
                                <th>Tên quyền</th>
                                <th>Tác vụ</th>
                            </tr>
                        </thead>
                        <tbody id="roleTableBody">
                        </tbody>
                    </table>
                    <div class="mt-3">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center" id="pagination">
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Thêm/Sửa -->
<div class="modal fade" id="roleModal" tabindex="-1" role="dialog" aria-labelledby="roleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="roleModalLabel">Thêm quyền mới</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="roleForm">
                    <input type="hidden" id="roleId">
                    <div class="form-group">
                        <label for="roleName">Tên quyền</label>
                        <input type="text" class="form-control" id="roleName" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" onclick="saveRole()">Lưu</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            loadRoles();
        });

        function loadRoles() {
            $.ajax({
                url: '/api/ds-phan-quyen',
                type: 'GET',
                success: function(response) {
                    if (response.status) {
                        console.log(response);
                        displayRoles(response.data);
                    }
                    else {
                        console.log(response);
                        Swal.fire('Lỗi!', response.message, 'error');
                    }
                },
                error: function(response) {
                    if(response.status === 401) {
                        window.location.href = '/dang-nhap';
                    } else {
                        Swal.fire('Lỗi!', response.message, 'error');
                    }
                }
            });
        }

        function displayRoles(roles) {
            const tbody = $('#roleTableBody');
            tbody.empty();
            
            roles.forEach((role, index) => {
                let actionButtons = '';
                
                // Kiểm tra quyền xóa từ claims của user
                const hasDeletePermission = @Json.Serialize(User.HasClaim("Permission", "Delete"));
                
                if (hasDeletePermission) {
                    actionButtons += `
                        <button class="btn btn-sm btn-danger" onclick="deleteRole('${role.id}')">
                            <i class="fas fa-trash"></i>
                        </button>
                    `;
                }

                tbody.append(
                    '<tr>' +
                        '<td>' + (index + 1) + '</td>' +
                        '<td>' + role.name + '</td>' +
                        '<td>' + actionButtons + '</td>' +
                    '</tr>'
                );
            });
        }

        function showAddModal() {
            $('#roleId').val('');
            $('#roleName').val('');
            $('#roleDescription').val('');
            $('#roleModalLabel').text('Thêm quyền mới');
            $('#roleModal').modal('show');
        }

        function saveRole() {
            $.ajax({
                url: '/api/them-phan-quyen',
                type: 'POST',
                headers: {
                    'Authorization': 'Bearer ' + getCookie('token')
                },
                data: {role: $('#roleName').val()},
                success: function(response) {
                    if (response.status) {
                        $('#roleModal').modal('hide');
                        Swal.fire('Thành công!', response.message, 'success');
                        loadRoles();
                    } else {
                        Swal.fire('Lỗi!', response.message, 'error');
                    }
                },
                error: function(xhr) {
                    if(xhr.status === 401) {
                        window.location.href = '/dang-nhap';
                    } else {
                        Swal.fire('Lỗi!', 'Không thể lưu thông tin quyền', 'error');
                    }
                }
            });
        }

        function deleteRole(id) {
            Swal.fire({
                title: 'Xác nhận xóa?',
                text: "Bạn không thể hoàn tác sau khi xóa!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/api/xoa-quyen',
                        type: 'POST',
                  
                        data: {id: id},
                        success: function(response) {
                            if (response.status) {
      
                                loadRoles();
                            } else {
                                Swal.fire('Lỗi!', response.message, 'error');
                            }
                        },
                        error: function(xhr) {
                            if(xhr.status === 401) {
                                window.location.href = '/dang-nhap';
                            } else {
                                Swal.fire('Lỗi!', 'Không thể xóa quyền', 'error');
                            }
                        }
                    });
                }
            });
        }

        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
        }
    </script>
}