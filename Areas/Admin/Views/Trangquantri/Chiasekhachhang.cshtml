<!-- Modal Thêm Chia Sẻ -->
<div class="modal fade" id="addShareModal" tabindex="-1" role="dialog" aria-labelledby="addShareModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addShareModalLabel">Thêm Chia Sẻ Khách Hàng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addShareForm" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Tiêu đề</label>
                        <input type="text" class="form-control" id="title" name="title" required onchange="generateAlias(this.value)">
                    </div>
                    <div class="form-group">
                        <label for="description">Mô tả</label>
                        <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="aliasurl">Alias URL</label>
                        <input type="text" class="form-control" id="aliasurl" name="aliasurl">
                    </div>
                    <div class="form-group">
                        <label>Hình ảnh</label>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="formFile" name="File" accept="image/*">
                            <label class="custom-file-label" for="formFile">Chọn file</label>
                        </div>
                        <img id="previewImage" src="#" alt="Preview" class="mt-2 d-none" style="max-width: 200px;">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="btnAddShare">Thêm</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Sửa Chia Sẻ -->
<div class="modal fade" id="editShareModal" tabindex="-1" role="dialog" aria-labelledby="editShareModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editShareModalLabel">Sửa Chia Sẻ Khách Hàng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editShareForm" enctype="multipart/form-data">
                    <input type="hidden" id="Id_share" name="Id_share">
                    <div class="form-group">
                        <label for="editTitle">Tiêu đề</label>
                        <input type="text" class="form-control" id="editTitle" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="editDescription">Mô tả</label>
                        <textarea class="form-control" id="editDescription" name="description" rows="3" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="editAliasurl">Alias URL</label>
                        <input type="text" class="form-control" id="editAliasurl" name="aliasurl">
                    </div>
                    <div class="form-group">
                        <label>Hình ảnh</label>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="editFormFile" name="File" accept="image/*">
                            <label class="custom-file-label" for="editFormFile">Chọn file</label>
                        </div>
                        <img id="editPreviewImage" src="#" alt="Preview" class="mt-2" style="max-width: 200px;">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="btnUpdateShare">Cập nhật</button>
            </div>
        </div>
    </div>
</div>

<!-- Danh sách chia sẻ -->
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="m-0 font-weight-bold text-primary">Quản lý Chia Sẻ Khách Hàng</h5>
                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addShareModal">
                            <i class="fas fa-plus"></i> Thêm Chia Sẻ
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th width="5%">STT</th>
                                    <th width="15%">Hình ảnh</th>
                                    <th width="20%">Tiêu đề</th>
                                    <th width="30%">Mô tả</th>
                                    <th width="10%">Trạng thái</th>
                                    <th width="20%">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="shareList">
                                <!-- Dữ liệu sẽ được thêm vào đây bằng JavaScript -->
                            </tbody>
                        </table>
                    </div>
                    <!-- Phân trang -->
                    <div class="d-flex justify-content-center mt-4">
                        <nav aria-label="Page navigation">
                            <ul class="pagination" id="pagination">
                                <!-- Các nút phân trang sẽ được thêm vào đây bằng JavaScript -->
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="importmap">
        {
            "imports": {
                "ckeditor5": "https://cdn.ckeditor.com/ckeditor5/43.3.1/ckeditor5.js",
                "ckeditor5/": "https://cdn.ckeditor.com/ckeditor5/43.3.1/",
                "ckeditor5-premium-features": "https://cdn.ckeditor.com/ckeditor5-premium-features/43.3.1/ckeditor5-premium-features.js",
                "ckeditor5-premium-features/": "https://cdn.ckeditor.com/ckeditor5-premium-features/43.3.1/"
            }
        }
    </script>
    <script type="module" src="assets/vendor/ckeditor5.js"></script>
    <script>
        $(document).ready(function() {
            Hienthidsshare(1, 3);

            // Xử lý preview ảnh khi chọn file
            function readURL(input, previewId) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $(previewId).attr('src', e.target.result).removeClass('d-none');
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }

            // Preview ảnh khi thêm mới
            $('#formFile').change(function() {
                readURL(this, '#previewImage');
                var fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').html(fileName);
            });
            
            // Preview ảnh khi sửa
            $('#editFormFile').change(function() {
                readURL(this, '#editPreviewImage');
                var fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').html(fileName);
            });

            // Xử lý các sự kiện click
            $('#btnAddShare').click(function() {
                Themshare();
            });

            $('#btnUpdateShare').click(function() {
                Capnhatshare();
            });
        });

        function Hienthidsshare(page, pagesize) {
            $.ajax({
                url: '/Pagemain/ListShare',
                type: 'POST',
                data: { page: page, pagesize: pagesize },
                success: function(response) {
                    if (response.success) {
                        var str = '';
                        $.each(response.data, function(index, item) {
                            str += `<tr>
                                <td>${index + 1}</td>
                                <td><img src="/Uploads/${item.image}" style="max-width: 100px;"></td>
                                <td>${item.title}</td>
                                <td>${item.description}</td>
                                <td>
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="status_${item.id_share}" 
                                            ${item.status ? 'checked' : ''} onchange="Capnhatstatus('${item.id_share}')">
                                        <label class="custom-control-label" for="status_${item.id_share}"></label>
                                        <span style="display: ${item.status ? 'inline' : 'none'}">Hiện</span>
                                        <span style="display: ${!item.status ? 'inline' : 'none'}">Ẩn</span>
                                    </div>
                                </td>
                                <td>
                                    <button class="btn btn-primary btn-sm" onclick="Hienthimodalsua('${item.id_share}', '${item.title}', '${item.description}', '${item.aliasurl}', '${item.image}')">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-danger btn-sm" onclick="Xoashare('${item.id_share}')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>`;
                        });
                        $('#shareList').html(str);

                        // Xử lý phân trang
                        var totalPages = response.totalpages;
                        var currentPage = page;
                        str = `<ul class="pagination">`;
                        if(currentPage > 1) {
                            str += `<li class="page-item"><a class="page-link" href="#" onclick="Hienthidsshare(${currentPage-1}, ${pagesize})">Previous</a></li>`;
                        }
                        for(var i = 1; i <= totalPages; i++) {
                            str += `<li class="page-item ${i === currentPage ? 'active' : ''}">
                                <a class="page-link" href="#" onclick="Hienthidsshare(${i}, ${pagesize})">${i}</a>
                            </li>`;
                        }
                        if(currentPage < totalPages) {
                            str += `<li class="page-item"><a class="page-link" href="#" onclick="Hienthidsshare(${currentPage+1}, ${pagesize})">Next</a></li>`;
                        }
                        str += `</ul>`;
                        $('#pagination').html(str);
                    }
                }
            });
        }

        function Themshare() {
            $.ajax({
                url: '/Pagemain/AddShareCustomer',
                type: 'POST',
                data: new FormData($('#addShareForm')[0]),
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.status == 1) {
                        $('#addShareModal').modal('hide');
                        Swal.fire(
                            'Thành công!',
                            'Thêm chia sẻ thành công.',
                            'success'
                        );
                        Hienthidsshare(1, 10);
                        $('#addShareForm')[0].reset();
                        $('#previewImage').addClass('d-none');
                    } else {
                        Swal.fire(
                            'Thất bại!',
                             response.message,
                            'error'
                        );
                    }
                }
            });
        }

        function Xoashare(shareId) {
            Swal.fire({
                title: 'Bạn có chắc chắn?',
                text: "Chia sẻ này sẽ bị xóa vĩnh viễn!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Pagemain/DeleteShareCustomer',
                        type: 'POST',
                        data: { id_share: shareId },
                        success: function(response) {
                            if (response.status == 1) {
                                Swal.fire(
                                    'Đã xóa!',
                                    'Chia sẻ đã được xóa thành công.',
                                    'success'
                                );
                                Hienthidsshare(1, 10);
                            } else {
                                Swal.fire(
                                    'Lỗi!',
                                    'Có lỗi xảy ra khi xóa chia sẻ.',
                                    'error'
                                );
                            }
                        }
                    });
                }
            });
        }

        function Capnhatstatus(id_share) {
            $.ajax({
                url: '/Pagemain/UpdateStatusShare',
                type: 'POST',
                data: { id_share: id_share },
                success: function(response) {
                    if (response.status == 1) {
                        Hienthidsshare(1, 10);
                    }
                }
            });
        }

        function Hienthimodalsua(id_share, title, description, aliasurl, image) {
            $('#editShareModal').modal('show');
            $('#editShareForm').find('#Id_share').val(id_share);
            $('#editShareForm').find('#editTitle').val(title);
            $('#editShareForm').find('#editDescription').val(description);
            $('#editShareForm').find('#editAliasurl').val(aliasurl);
            $('#editShareForm').find('#editPreviewImage').attr('src', `/Uploads/${image}`);
        }

        function Capnhatshare() {
            $.ajax({
                url: '/Pagemain/UpdateShareCustomer',
                type: 'POST',
                data: new FormData($('#editShareForm')[0]),
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.status == 1) {
                        $('#editShareModal').modal('hide');
                        Swal.fire(
                            'Thành công!',
                            'Cập nhật chia sẻ thành công.',
                            'success'
                        );
                        Hienthidsshare(1, 10);
                    } else {
                        Swal.fire(
                            'Thất bại!',
                            'Có lỗi xảy ra khi cập nhật chia sẻ.',
                            'error'
                        );
                    }
                }
            });
        }
        function generateAlias(str) {
            // Chuyển về chữ thường
            str = str.toLowerCase();
            
            // Xóa dấu
            str = str.normalize('NFD').replace(/[\u0300-\u036f]/g, '');
            
            // Thay thế ký tự đặc biệt bằng dấu gạch ngang
            str = str.replace(/[^a-z0-9 -]/g, '')
                    .replace(/\s+/g, '-')     // Thay khoảng trắng bằng dấu gạch ngang
                    .replace(/-+/g, '-');      // Xóa nhiều dấu gạch ngang liên tiếp
            
            // Xóa dấu gạch ngang ở đầu và cuối
            str = str.replace(/^-+|-+$/g, '');
            
            $('#aliasurl').val(str);
            return str;
        }
    </script>
}
