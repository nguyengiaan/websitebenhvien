@{
    ViewData["Title"] = "Quản lý Email";
}

<div class="container mt-5">
    <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Email bệnh viện</h4>
        </div>
        <div class="card-body">
            <form id="addEmailForm">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <button type="submit" class="btn btn-primary" id="btncapnhat"> Cập nhật</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            loadEmails();
            // Sửa email
                 $('#btncapnhat').on('click', function(e) {
            e.preventDefault();
            var id = $(this).data('id'); // Lấy ID từ chính button
            var email = $('#email').val();

            $.ajax({
                url: '/api-update-email',
                type: 'POST',
                data: { id: id, email: email },
                success: function(response) {
                    if (response.status) {
                         Swal.fire(
                                    'Đã cập nhật!',
                                    'Thành công',
                                    'success'
                                );
                        loadEmails();
                         
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra, vui lòng thử lại.');
                }
            });
        });

        });

        // Tải danh sách email
        function loadEmails() {
            $.ajax({
                url: '/api/lay-email',
                type: 'GET',
                success: function(response) {
                    if (response.status) {
               
                       $("#email").val(response.data.email)
                       $("#btncapnhat").data('id',response.data.id)
                    } else {
                        alert(response.message);
                    }
                }
            });
        }

    

    </script>
}
@section Styles {
    <style>
