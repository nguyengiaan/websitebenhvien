                allowOutsideClick: false,
                background: '#ffffff',
                didOpen: () => {
                    let progress = 0;
                    const bar = document.querySelector('.progress-bar');
                    const interval = setInterval(() => {
                        progress += 2;
                        bar.style.width = `${progress}%`;
                        bar.setAttribute('aria-valuenow', progress);
                        if (progress >= 100) clearInterval(interval);
                    }, 50);
                }
            });

            // Gửi AJAX request
