@{
    ViewData["Title"] = "Trang quản trị";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Xin chào,  @User.Identity.Name</h1>
    </div>

    <!-- Content Row -->
    <div class="row">

        <!-- Total Users Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2 hover-effect" style="background-color: #f8f9fc;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1" style="color: #4e73df !important;">
                                Tổng số người đăng ký khám sức khoẻ</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-600" id="dangkysk">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-hospital-user fa-2x" style="color: #4e73df;opacity: 0.8;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Products Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2 hover-effect" style="background-color: #f8f9fc;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1" style="color: #f6c23e !important;">
                                Tổng số người đăng ký khám sức khoẻ chờ duyệt</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-600" id="dangkyskcd">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x" style="color: #f6c23e;opacity: 0.8;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total News Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2 hover-effect" style="background-color: #f8f9fc;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1" style="color: #1cc88a !important;">
                                Tổng số người đăng ký khám sức khoẻ đã duyệt</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-600" id="dangkyskdd">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x" style="color: #1cc88a;opacity: 0.8;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total News Categories Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2 hover-effect" style="background-color: #f8f9fc;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1" style="color: #4e73df !important;">
                                Tổng số người đăng ký khám bệnh</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-600" id="dangkykb">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-stethoscope fa-2x" style="color: #4e73df;opacity: 0.8;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Categories Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2 hover-effect" style="background-color: #f8f9fc;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1" style="color: #f6c23e !important;">
                                Tổng số người đăng ký khám bệnh chờ duyệt</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-600" id="dangkykbcd">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-hourglass-half fa-2x" style="color: #f6c23e;opacity: 0.8;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2 hover-effect" style="background-color: #f8f9fc;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1" style="color: #1cc88a !important;">
                                Tổng số người đăng ký khám bệnh đã duyệt</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-600" id="dangkykbdd">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-check fa-2x" style="color: #1cc88a;opacity: 0.8;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <!-- Bar Chart -->
    <div class="row">
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thống kê tổng quan</h6>
                </div>
                <div class="card-body">
                    <div class="chart-bar">
                        <canvas id="healthDateChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End of Page Content -->

<!-- Page level plugins -->
<script src="~/Admin/vendor/chart.js/Chart.min.js"></script>

<style>
.hover-effect {
    transition: transform 0.2s ease-in-out;
}

.hover-effect:hover {
    transform: translateY(-5px);
}

.chart-area, .chart-pie, .chart-bar {
    position: relative;
    height: 300px;
    width: 100%;
}
</style>

@section Scripts
{   
    <script>
        $(document).ready(function(){
            Countdashboard();
            GetCharthealthdate();
        });
        
        function Countdashboard(){
            $.ajax({
                url: "/api/tao-bieu-do-dang-ky", 
                type: "GET",
                success: function(response){
                    if(response.status){
                        console.log(response.data);
                        $("#dangkysk").text(response.data.songuoidksk || 0);
                        $("#dangkyskcd").text(response.data.songuoidkskcd || 0);
                        $("#dangkyskdd").text(response.data.songuoidkdd || 0);
                        $("#dangkykb").text(response.data.songuoidkb || 0);
                        $("#dangkykbcd").text(response.data.songuoidkkbcd || 0);
                        $("#dangkykbdd").text(response.data.songuoidkkbdd || 0);

                       
                    }
                }
            });
        }
        function GetCharthealthdate(){
            $.ajax({
                url: "/api/lay-danh-sach-dang-ky-theo-ngay", 
                type: "GET",
                success: function(response){
                    if(response.status){
                        console.log(response.data);
                        
                        // Extract data for chart
                        var dates = response.data.map(item => item.date.split('T')[0]);
                        var countKBData = response.data.map(item => item.countKB);
                        var countSKData = response.data.map(item => item.countSK);

                        // Create bar chart
                        var ctx = document.getElementById("healthDateChart");
                        var healthDateChart = new Chart(ctx, {
                            type: 'bar',
                            data: {
                                labels: dates,
                                datasets: [
                                    {
                                        label: "Đăng ký khám bệnh",
                                        backgroundColor: "#4e73df",
                                        data: countKBData
                                    },
                                    {
                                        label: "Đăng ký khám sức khỏe", 
                                        backgroundColor: "#1cc88a",
                                        data: countSKData
                                    }
                                ]
                            },
                            options: {
                                maintainAspectRatio: false,
                                scales: {
                                    yAxes: [{
                                        ticks: {
                                            beginAtZero: true
                                        }
                                    }],
                                    xAxes: [{
                                        barPercentage: 0.8
                                    }]
                                },
                                legend: {
                                    display: true,
                                    position: 'top'
                                },
                                title: {
                                    display: true,
                                    text: 'Thống kê đăng ký theo ngày'
                                }
                            }
                        });
                    }
                }
            });
        }
    </script>
}
