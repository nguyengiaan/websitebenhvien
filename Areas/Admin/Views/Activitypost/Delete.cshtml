@model websitebenhvien.Models.EnitityVM.PostactivityVM
@{
    ViewData["Title"] = "Xóa hoạt động";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Xóa hoạt động</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { Area = "Admin" })">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Hoạt động</a></li>
                        <li class="breadcrumb-item active">Xóa</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fa fa-exclamation-triangle"></i> Xác nhận xóa hoạt động
                    </h3>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5><i class="icon fa fa-exclamation-triangle"></i> Cảnh báo!</h5>
                        Bạn có chắc chắn muốn xóa hoạt động này? Thao tác này không thể hoàn tác.
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <!-- Thông tin hoạt động sẽ bị xóa -->
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Thông tin hoạt động</h3>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-3">ID:</dt>
                                        <dd class="col-sm-9">@Model.Id_Postactivity</dd>

                                        <dt class="col-sm-3">Tiêu đề:</dt>
                                        <dd class="col-sm-9"><strong>@Model.Title</strong></dd>

                                        <dt class="col-sm-3">Danh mục:</dt>
                                        <dd class="col-sm-9">@Model.CategoryName</dd>

                                        @if (!string.IsNullOrEmpty(Model.Descriptionshort))
                                        {
                                            <dt class="col-sm-3">Mô tả ngắn:</dt>
                                            <dd class="col-sm-9">@Model.Descriptionshort</dd>
                                        }

                                        @if (!string.IsNullOrEmpty(Model.Url))
                                        {
                                            <dt class="col-sm-3">URL:</dt>
                                            <dd class="col-sm-9">@Model.Url</dd>
                                        }

                                        <dt class="col-sm-3">Trạng thái:</dt>
                                        <dd class="col-sm-9">
                                            @if (Model.Status)
                                            {
                                                <span class="badge badge-success">Kích hoạt</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Vô hiệu</span>
                                            }
                                        </dd>

                                        @if (Model.Createat != DateTime.MinValue)
                                        {
                                            <dt class="col-sm-3">Ngày tạo:</dt>
                                            <dd class="col-sm-9">@Model.Createat.ToString("dd/MM/yyyy HH:mm")</dd>
                                        }
                                    </dl>

                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        <hr>
                                        <strong>Nội dung:</strong>
                                        <div class="mt-2 p-3 bg-light border rounded" style="max-height: 200px; overflow-y: auto;">
                                            @Html.Raw(Model.Description)
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <!-- Cảnh báo -->
                            <div class="card card-warning">
                                <div class="card-header">
                                    <h3 class="card-title">Lưu ý quan trọng</h3>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled">
                                        <li><i class="fa fa-exclamation-circle text-warning"></i> Thao tác xóa không thể hoàn tác</li>
                                        <li><i class="fa fa-exclamation-circle text-warning"></i> Tất cả dữ liệu liên quan sẽ bị mất</li>
                                        <li><i class="fa fa-exclamation-circle text-warning"></i> Hãy cân nhắc kỹ trước khi xóa</li>
                                    </ul>
                                </div>
                            </div>

                            <!-- Thay thế: Vô hiệu hóa -->
                            <div class="card card-info">
                                <div class="card-header">
                                    <h3 class="card-title">Gợi ý khác</h3>
                                </div>
                                <div class="card-body">
                                    <p>Thay vì xóa, bạn có thể:</p>
                                    <ul>
                                        <li>Vô hiệu hóa hoạt động</li>
                                        <li>Chỉnh sửa nội dung</li>
                                        <li>Lưu trữ để sử dụng sau</li>
                                    </ul>
                                    <a href="@Url.Action("Edit", new { id = Model.Id_Postactivity })" 
                                       class="btn btn-warning btn-sm">
                                        <i class="fa fa-edit"></i> Chỉnh sửa thay thế
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id_Postactivity" />
                        <button type="submit" class="btn btn-danger" 
                                onclick="return confirm('Bạn có chắc chắn muốn xóa hoạt động này?')">
                            <i class="fa fa-trash"></i> Xác nhận xóa
                        </button>
                    </form>
                    <a href="@Url.Action("Details", new { id = Model.Id_Postactivity })" class="btn btn-info">
                        <i class="fa fa-eye"></i> Xem chi tiết
                    </a>
                    <a href="@Url.Action("Edit", new { id = Model.Id_Postactivity })" class="btn btn-warning">
                        <i class="fa fa-edit"></i> Chỉnh sửa
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fa fa-list"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Thêm hiệu ứng hover cho nút xóa
            $('.btn-danger').hover(
                function() {
                    $(this).addClass('pulse');
                },
                function() {
                    $(this).removeClass('pulse');
                }
            );
        });
    </script>
}

@section styles {
    <style>
        .pulse {
            animation: pulse 1s infinite;
        }
        
        @@keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.05);
            }
            100% {
                transform: scale(1);
            }
        }
    </style>
}
