    .carousel-caption {
        border-radius: 15px;
        padding: 2rem;
        max-width: 80%;
        margin: auto;
        bottom: 2rem;
    }

    .news-item, .video-item {
        transition: all 0.3s ease;
    }

    .text-white-50 {
        color: rgba(255,255,255,0.8)!important;
    }
</style>

