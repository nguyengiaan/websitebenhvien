
@{
    ViewData["Title"] = "Danh mục bài viết";

}
<div class="container mt-4">
    <div class="row">
        <!-- Sidebar -->
        <aside class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-gradient text-white d-flex align-items-center" 
                     style="background: linear-gradient(135deg, #007bff, #0056b3);">
                    <i class="fas fa-list me-2 text-danger fw-bold"></i>
                    <h6 class="mb-0 text-uppercase text-danger fw-bold">Danh mục</h6>
                </div>
                <div class="list-group list-group-flush">
                    @await Component.InvokeAsync("Danhmucbaiviet")
                </div>
            </div>
        </aside>

        <!-- Main content -->
        <main class="col-md-9">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb bg-light p-2 rounded">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none"><i class="fas fa-home me-1"></i>Trang chủ</a></li>
                    <li class="breadcrumb-item"><span id="categoryTitle">Danh mục bài viết</span></li>
                </ol>
            </nav>

            <!-- Title -->
            <h2 class="mb-4 fw-bold text-primary border-bottom pb-2" id="categoryTitle1"></h2>

            <!-- Post list -->
            <div class="row g-3" id="postList"></div>

            <!-- Pagination -->
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center" id="pagination"></ul>
            </nav>
        </main>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        let currentPage = 1;
        const pageSize = 12;
        loadPosts(currentPage, pageSize);

        const categoryTitle = localStorage.getItem("selectedCategoryTitle") || "Tất cả bài viết";
        $("#categoryTitle").text(categoryTitle);
        $("#categoryTitle1").text(categoryTitle);
    });

    function loadPosts(page, pageSize) {
        const pathParts = window.location.pathname.split('/');
        const category = pathParts[pathParts.length - 1] || '';
        const currentCategory = "/bai-viet/" + category;

        $.ajax({
            url: '/Post/CatogeryPost',
            type: 'GET',
            data: { Catogery: currentCategory, page: page, pagesize: 9 },
            success: function (response) {
                $('#postList').empty();
                $('#pagination').empty();

                response.ds.forEach(function (post) {
                    const today = new Date();
                    const postDate = new Date(post.createat);
                    const isNew = today.toDateString() === postDate.toDateString();

                    const formattedDate = String(postDate.getDate()).padStart(2, '0') + "/" +
                        String(postDate.getMonth() + 1).padStart(2, '0') + "/" +
                        String(postDate.getFullYear());

                    const postHtml = `
                        <div class="col-md-4">
                            <div class="card h-100 border-0 shadow-sm rounded-3 post-card">
                                <div class="position-relative">
                                    <img src="/Resources/${post.url}" class="card-img-top rounded-top" alt="${post.title}"
                                        style="height: 200px; object-fit: cover;">
                                    ${isNew ? '<span class="badge bg-danger position-absolute top-0 end-0 m-2 animate__animated animate__pulse animate__infinite">Mới</span>' : ''}
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title fw-semibold text-truncate-2">${post.title}</h6>
                                    <p class="text-muted small mb-2"><i class="far fa-calendar-alt me-1"></i>${formattedDate}</p>
                                    <a href="${post.alias_url}" class="btn btn-outline-primary btn-sm mt-auto rounded-pill">
                                        Xem chi tiết <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    `;
                    $('#postList').append(postHtml);
                });

                // Pagination
                const totalPages = response.totalpages;
                const currentPage = response.currentpage;

                let paginationHtml = '';

                if (currentPage > 1) {
                    paginationHtml += `<li class="page-item"><a class="page-link" href="#" onclick="loadPosts(${currentPage - 1}, 9)">«</a></li>`;
                }

                for (let i = 1; i <= totalPages; i++) {
                    paginationHtml += `
                        <li class="page-item ${i === currentPage ? 'active' : ''}">
                            <a class="page-link" href="#" onclick="loadPosts(${i}, 9)">${i}</a>
                        </li>`;
                }

                if (currentPage < totalPages) {
                    paginationHtml += `<li class="page-item"><a class="page-link" href="#" onclick="loadPosts(${currentPage + 1}, 9)">»</a></li>`;
                }

                $('#pagination').html(paginationHtml);
            },
            error: function () {
                $('#postList').html('<div class="col-12"><p class="text-center text-danger">Có lỗi xảy ra khi tải bài viết</p></div>');
            }
        });
    }
</script>

<style>
    /* Giới hạn 2 dòng tiêu đề */
    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    /* Card hover */
    .post-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .post-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.15);
    }
</style>
}
