@{
    ViewData["Title"] = "Trang chủ";
}
<div class="container-fluid p-0" style="padding-left: 10px!important;">
    <div class="row g-4">
        <!-- Carousel Section -->
        <div class="col-lg-8 col-12">
            <div class="card border-0">
                <div id="mainCaroushadowsel" class="carousel slide overflow-hidden" data-bs-ride="carousel">
                             @await Component.InvokeAsync("Getslide")
                </div>
            </div>
        </div>

        <!-- News Section -->
        <div class="col-lg-4 col-12">
            <div class="card shadow rounded-4 border-0 h-100 news-card" >
                <div class="card-header bg-primary text-white py-3 rounded-top-4 d-flex align-items-center" style="background-color: #ffffff!important;">
                    <i class="fas fa-newspaper me-2 fa-lg text-danger" ></i>
                    <h5 class="mb-0 fw-bold text-danger fs-6" >TIN TỨC VÀ SỰ KIỆN</h5>
                </div>
                <div class="card-body p-0" style="background-color: #ffffff!important; border-radius: 10px; height: 300px; overflow-y: auto;">
                    <div class="list-group list-group-flush" style="max-height: 300px;">
                       @await Component.InvokeAsync("LoadNews")
                    </div>
                </div>
          
            </div>
        </div>

        <!-- Video Section -->
        <div class="col-lg-3">
            <div class="card shadow rounded-4 border-0">
                    <div class="card-header bg-primary text-white py-3 rounded-top-4" style="background-color: #ffffff!important;">
                            <h4 class="mb-0 fw-bold text-danger fs-6" ><i class="fas fa-video me-2"></i>VIDEO NỔI BẬT</h4>
                </div>
                <div class="card-body p-0">
                    <div id="videoCarousel" class="carousel slide" data-bs-ride="carousel">
                                  @await Component.InvokeAsync("Video")
                    </div>
                </div>
            </div>
        </div>

        <!-- Specialty Section -->
        <div class="col-lg-9">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-primary text-white py-3 rounded-top-4" style="background-color: #ffffff!important;">
                    <h4 class="mb-0 fw-bold text-danger fs-6" ><i class="fas fa-hospital-user me-2"></i>CHUYÊN KHOA</h4>
                </div>
                <div class="card-body">
                    <div id="specialtyCarousel" class="carousel slide" data-bs-ride="carousel">
                    @await Component.InvokeAsync("Chuyenkhoatrangchu") 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="services-section py-5" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
    <div class="container">
        <div class="row g-4">
            <!-- Form đăng ký khám bệnh -->
            <div class="col-lg-4" data-aos="fade-right">
                <div class="contact-form p-4 bg-white rounded-4 shadow-lg border-0 transition-all hover-lift">
                    <h4 class="mb-4 text-primary fw-bold text-center text-danger" > 
                        <i class="fas fa-stethoscope me-2"></i>Đăng ký khám bệnh
                    </h4>
                    <form id="consultForm" class="needs-validation" novalidate>
                        <div class="btn-group w-100 mb-3" role="group">
                            <input type="radio" class="btn-check" name="visitType" id="specialty" value="specialty" checked onchange="toggleSpecialtyFields()">
                            <label class="btn btn-outline-primary rounded-start" for="specialty">
                                <i class="fas fa-stethoscope me-1"></i>Khám chuyên khoa
                            </label>

                            <input type="radio" class="btn-check" name="visitType" id="checkup" value="checkup" onchange="toggleSpecialtyFields()">
                            <label class="btn btn-outline-primary rounded-end" for="checkup">
                                <i class="fas fa-heartbeat me-1"></i>Khám sức khỏe
                            </label>
                        </div>

                   

                        <div class="form-floating mb-3">
                            <select class="form-select border-0 bg-light" id="Id_specialty" >
                            </select>
                            <label for="Id_specialty">Chuyên khoa</label>
                        </div>

                        <div class="form-floating mb-3">
                            <select class="form-select border-0 bg-light" id="Id_doctor" >
                            </select>
                            <label for="Id_doctor">Bác sĩ</label>
                        </div>

                        <div class="form-floating mb-3" id="calendar">
                        </div>

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control border-0 bg-light" id="patientName" placeholder=" " required>
                            <label for="patientName">Họ và tên</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="tel" class="form-control border-0 bg-light" id="patientPhone" placeholder=" " required>
                            <label for="patientPhone">Số điện thoại</label>
                        </div>



                        <div class="form-floating mb-4">
                            <textarea class="form-control border-0 bg-light" id="patientNote" style="height: 100px" placeholder=" "></textarea>
                            <label for="patientNote">Nội dung tư vấn</label>
                        </div>

                        <button type="button" class="btn btn-primary btn-lg w-100 rounded-pill shadow-sm" id="btnRegister">
                            <i class="fas fa-paper-plane me-2"></i>Gửi yêu cầu
                        </button>
                    </form>
                </div>
            </div>

            <!-- Các dịch vụ -->
            <div class="col-lg-8">
                <div class="row g-4">
                    <div class="text-center mb-5">
                        <h4 class="display-6 fw-bold  mb-3" style="font-family: HelveticaNeue:  !important; color: #0095d9;">BỆNH VIỆN ĐA KHOA MỸ PHƯỚC</h4>
                        <h5 class="fw-light " style="font-family: HelveticaNeue:  !important; color: #0095d9;">Ân cần - Nhanh chóng - An toàn</h5>
                    </div>

                    <div class="col-md-6" data-aos="fade-up" data-aos-delay="100">
                        <div class="service-card bg-white rounded-4 p-4 shadow-hover h-100 transition-all" style="transform-style: preserve-3d; background-color: #0095d9!important; ">
                            <div class="service-icon mb-4 text-primary d-flex justify-content-center">
                                <img src="https://cdn-icons-png.flaticon.com/512/3997/3997872.png" alt="Tư vấn khám bệnh" class="img-fluid pulse-animation" style="width: 80px;">
                            </div>
                            <div class="text-center">
                                <h5 class="service-title fw-bold mb-3 text-white">Tư vấn khám bệnh</h5>
                                <p class="text-white">Đội ngũ bác sĩ chuyên môn cao tư vấn 24/7, luôn sẵn sàng hỗ trợ mọi lúc mọi nơi</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6" data-aos="fade-up" data-aos-delay="200">
                        <div class="service-card bg-white rounded-4 p-4 shadow-hover h-100 transition-all" style="transform-style: preserve-3d; background-color: #0095d9!important;">
                            <div class="service-icon mb-4 text-primary d-flex justify-content-center">
                                <img src="https://cdn-icons-png.flaticon.com/512/3974/3974770.png" alt="Bác sĩ" class="img-fluid pulse-animation" style="width: 80px;">
                            </div>
                            <div class="text-center">
                                <h5 class="service-title fw-bold mb-3 text-primary text-white">Chuyên khoa - Bác sĩ</h5>
                                <p class="text-white">Đội ngũ chuyên gia đầu ngành với nhiều năm kinh nghiệm, tận tâm chăm sóc bệnh nhân</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6" data-aos="fade-up" data-aos-delay="300">
                        <div class="service-card bg-white rounded-4 p-4 shadow-hover h-100 transition-all" style="transform-style: preserve-3d; background-color: #0095d9!important;">
                            <div class="service-icon mb-4 text-primary d-flex justify-content-center">
                                <img src="https://cdn-icons-png.flaticon.com/512/4305/4305512.png" alt="Tra cứu kết quả" class="img-fluid pulse-animation" style="width: 80px;">
                            </div>
                            <div class="text-center">
                                <h5 class="service-title fw-bold mb-3 text-white">Tra cứu kết quả</h5>
                                <p class="text-white">Xem kết quả khám nhanh chóng, chính xác qua hệ thống online hiện đại</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6" data-aos="fade-up" data-aos-delay="400">
                        <div class="service-card bg-white rounded-4 p-4 shadow-hover h-100 transition-all" style="transform-style: preserve-3d; background-color: #0095d9!important;">
                            <div class="service-icon mb-4 text-primary d-flex justify-content-center">
                                <img src="https://cdn-icons-png.flaticon.com/512/3997/3997766.png" alt="Đăng ký" class="img-fluid pulse-animation" style="width: 80px;">
                            </div>
                            <div class="text-center">
                                <h5 class="service-title fw-bold mb-3 text-white">Đăng ký khám</h5>
                                <p class="text-white">Đăng ký khám trực tuyến dễ dàng, tiết kiệm thời gian chờ đợi tối đa</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
