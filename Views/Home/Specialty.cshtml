@{
    ViewData["Title"] = "Chuyên khoa";
    Layout = "~/Views/Shared/Layout_2.cshtml";
}
<div class="specialty-tabs">
    <ul class="nav nav-tabs" id="specialtyTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="intro-tab" data-bs-toggle="tab" data-bs-target="#intro" type="button" role="tab" aria-controls="intro" aria-selected="true">
                Giới thiệu
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="experts-tab" data-bs-toggle="tab" data-bs-target="#experts" type="button" role="tab" aria-controls="experts" aria-selected="false">
                Chuyên gia
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="services-tab" data-bs-toggle="tab" data-bs-target="#services" type="button" role="tab" aria-controls="services" aria-selected="false">
                Dịch vụ
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="achievements-tab" data-bs-toggle="tab" data-bs-target="#achievements" type="button" role="tab" aria-controls="achievements" aria-selected="false">
                Thành tựu
            </button>
        </li>
    </ul>

    <div class="tab-content" id="specialtyTabsContent">
        <div class="tab-pane fade show active" id="intro" role="tabpanel" aria-labelledby="intro-tab">
            <div class="content-wrapper">
                <!-- Nội dung giới thiệu -->
            </div>
        </div>
        <div class="tab-pane fade" id="experts" role="tabpanel" aria-labelledby="experts-tab">
            <div class="content-wrapper">
                <!-- Nội dung chuyên gia -->
            </div>
        </div>
        <div class="tab-pane fade" id="services" role="tabpanel" aria-labelledby="services-tab">
            <div class="content-wrapper">
                <!-- Nội dung dịch vụ -->
            </div>
        </div>
        <div class="tab-pane fade" id="achievements" role="tabpanel" aria-labelledby="achievements-tab">
            <div class="content-wrapper">
                <!-- Nội dung thành tựu -->
            </div>
        </div>
    </div>
</div>
