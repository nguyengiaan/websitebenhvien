@{
    ViewData["Title"] = "Chuyên khoa";
    ViewData["Image"] = "/Images/Logo-rm.png";
    ViewData["Description"]="Chuyên khoa bệnh viện đa khoa Mỹ Phước";
    ViewData["Keywords"]="Bệnh viện đa khoa Mỹ Phước,chuyên khoa";

}
<div class="container py-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <div class="specialty-header position-relative">
                <!-- 3D Background Shape -->
                <div class="position-absolute top-50 start-50 translate-middle"
                     style="width: 300px; height: 300px;
                            background: linear-gradient(45deg, rgba(13, 110, 253, 0.05), rgba(13, 110, 253, 0.1));
                            border-radius: 50%;
                            transform: rotate3d(1, 1, 0, 45deg);
                            animation: float 6s infinite ease-in-out;
                            z-index: -1;">
                </div>

                <!-- Title with 3D effect -->
                <h2 class="display-4 fw-bold mb-4"
                    style="transform: translateZ(30px);
                           color: #0d6efd;
                           text-shadow: 2px 2px 0px rgba(13, 110, 253, 0.2);">
                    <i class="fas fa-stethoscope me-2"></i>
                    Chuyên Khoa
                </h2>

                <!-- Subtitle -->
                <p class="lead text-muted mb-4 mx-auto" style="max-width: 600px;">
                    Khám phá các chuyên khoa tại bệnh viện của chúng tôi với đội ngũ y bác sĩ giàu kinh nghiệm
                </p>

                <!-- Decorative Divider -->
                <div class="d-flex align-items-center justify-content-center gap-3">
                    <div style="width: 80px; height: 2px; background: linear-gradient(90deg, transparent, #0d6efd)"></div>
                    <i class="fas fa-heart text-danger" style="animation: pulse 2s infinite"></i>
                    <div style="width: 80px; height: 2px; background: linear-gradient(90deg, #0d6efd, transparent)"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4" id="specialtyList">
           @await Component.InvokeAsync("Chuyenkhoa")
    </div>
</div>

@section Styles {
    <style>
    .divider-custom {
        margin: 1.25rem 0;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .divider-custom-line {
        width: 100%;
        max-width: 7rem;
        height: 0.25rem;
        background-color: #0d6efd;
        border-radius: 1rem;
        margin: 0 1rem;
    }

    .divider-custom-icon {
        font-size: 2rem;
    }

    .specialty-card {
        transition: all 0.4s ease;
        background: linear-gradient(145deg, #ffffff, #f5f7ff);
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }

    .specialty-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }

    .specialty-icon {
        text-align: center;
    }

    .icon-circle {
        width: 80px;
        height: 80px;
        margin: 0 auto;
        background: linear-gradient(45deg, #0d6efd, #0099ff);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .icon-circle i {
        font-size: 2rem;
        color: white;
    }

    .btn-primary {
        border: none;
        background: linear-gradient(45deg, #0d6efd, #0099ff);
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(153, 181, 224, 0.4);
    }
    
</style>


}


