@model IEnumerable<websitebenhvien.Models.Enitity.Postpersonnel>

<!-- Hero Section -->


<div class="main-content">
    <!-- Stats Section -->
  

    <!-- Why Choose Us Section -->
    <section class="why-choose-section py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="section-title">
                    <span >Tại sao chọn</span> Bệnh viện Mỹ Phước?
                </h2>
                <p class="section-subtitle">Những lý do khiến chúng tôi trở thành nơi làm việc lý tưởng</p>
            </div>

            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-hospital"></i>
                        </div>
                        <h5 class="feature-title">Môi trường chuyên nghiệp</h5>
                        <p class="feature-description">Làm việc trong môi trường y tế hiện đại với trang thiết bị tiên tiến và đội ngũ chuyên gia hàng đầu</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <h5 class="feature-title">Cơ hội phát triển</h5>
                        <p class="feature-description">Được đào tạo chuyên sâu và có nhiều cơ hội thăng tiến với lộ trình sự nghiệp rõ ràng</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-hand-holding-usd"></i>
                        </div>
                        <h5 class="feature-title">Phúc lợi hấp dẫn</h5>
                        <p class="feature-description">Chế độ đãi ngộ cạnh tranh, bảo hiểm đầy đủ cùng nhiều đặc quyền dành cho nhân viên</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <h5 class="feature-title">Đồng nghiệp thân thiện</h5>
                        <p class="feature-description">Làm việc cùng đội ngũ nhiệt tình, hỗ trợ lẫn nhau và chia sẻ kinh nghiệm</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-balance-scale"></i>
                        </div>
                        <h5 class="feature-title">Cân bằng cuộc sống</h5>
                        <p class="feature-description">Thời gian làm việc linh hoạt, nghỉ phép đầy đủ để đảm bảo sức khỏe cá nhân</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-trophy"></i>
                        </div>
                        <h5 class="feature-title">Ghi nhận thành tích</h5>
                        <p class="feature-description">Được đánh giá công bằng và ghi nhận đóng góp qua các chương trình khen thưởng</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Job Listings Section -->
    <section id="job-listings" class="jobs-section py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="section-title">
                    <span >Cơ hội nghề nghiệp</span> đang chờ bạn
                </h2>
                <p class="section-subtitle">Khám phá các vị trí tuyển dụng phù hợp với kỹ năng của bạn</p>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="jobs-container">
                        @foreach (var item in Model)
                        {
                            <div class="job-item">
                                <div class="job-card">
                                    <div class="job-header">
                                        <div class="job-info">
                                            <div class="job-icon">
                                                <i class="fas fa-briefcase"></i>
                                            </div>
                                            <div class="job-details">
                                                <h5 class="job-title">@item.title_recruitmentpost</h5>
                                                <div class="job-meta">
                                                    <span class="job-location">
                                                        <i class="fas fa-map-marker-alt"></i>
                                                        Bình Dương
                                                    </span>
                                                    <span class="job-type">
                                                        <i class="fas fa-clock"></i>
                                                        Full-time
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="job-status">
                                            @if (item.Status == "1")
                                            {
                                                <span class="status-badge status-active">
                                                    <i class="fas fa-check-circle"></i>
                                                    Đang tuyển
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="status-badge status-inactive">
                                                    <i class="fas fa-pause-circle"></i>
                                                    Tạm dừng
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    
                                    <div class="job-tags">
                                        <span class="job-tag">
                                            <i class="fas fa-dollar-sign"></i>
                                            Thỏa thuận
                                        </span>
                                        <span class="job-tag">
                                            <i class="fas fa-graduation-cap"></i>
                                            Y khoa
                                        </span>
                                    </div>

                                    <div class="job-actions">
                                        <button class="btn-details" data-bs-toggle="collapse" data-bs-target="#job-@item.id_recruitmentpost">
                                            <i class="fas fa-info-circle"></i>
                                            Chi tiết
                                        </button>
                                        <button class="btn-apply" onclick="scrollToForm()">
                                            <i class="fas fa-paper-plane"></i>
                                            Ứng tuyển
                                        </button>
                                    </div>
                                    
                                    <div class="collapse job-content" id="job-@item.id_recruitmentpost">
                                        <div class="job-description">
                                            @Html.Raw(item.Content_recruitmentpost)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Application Form Section -->
    <section id="application-form" class="application-section py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="application-form-wrapper">
                        <div class="form-header">
                            <div class="form-icon">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <h3 class="form-title">Ứng tuyển ngay hôm nay</h3>
                            <p class="form-subtitle">Điền thông tin để chúng tôi có thể liên hệ với bạn</p>
                        </div>

                        <form id="recruitmentForm" class="application-form">
                            <div class="form-row">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-icon">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <input type="text" class="form-input" id="Name" name="Name" placeholder="Họ và tên" required>
                                 
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-icon">
                                            <i class="fas fa-briefcase"></i>
                                        </div>
                                        <input type="text" class="form-input" id="Position" name="Position" placeholder="Vị trí ứng tuyển" required>
                                      
                                    </div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-icon">
                                            <i class="fas fa-phone"></i>
                                        </div>
                                        <input type="tel" class="form-input" id="Phone" name="Phone" placeholder="Số điện thoại" required>
                              
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-icon">
                                            <i class="fas fa-envelope"></i>
                                        </div>
                                        <input type="email" class="form-input" id="Email" name="Email" placeholder="Email" required>
                                    
                                    </div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-icon">
                                            <i class="fas fa-map-marker-alt"></i>
                                        </div>
                                        <input type="text" class="form-input" id="Address" name="Address" placeholder="Địa chỉ" required>
                                    
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-icon">
                                            <i class="fas fa-venus-mars"></i>
                                        </div>
                                        <select class="form-input" id="Sex" name="Sex" required>
                                            <option value="">Chọn giới tính</option>
                                            <option value="Nam">Nam</option>
                                            <option value="Nữ">Nữ</option>
                                        </select>
                                       
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="file-upload">
                                    <div class="file-upload-icon">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                    </div>
                                    <div class="file-upload-content">
                                        <h6>Tải lên CV của bạn</h6>
                                        <p>Kéo thả file vào đây hoặc <span class="upload-link">chọn file</span></p>
                                        <small>Hỗ trợ: PDF, DOC, DOCX (Tối đa 5MB)</small>
                                    </div>
                                    <input type="file" class="file-input" id="CV_Url" name="CV_Url" accept=".pdf,.doc,.docx">
                                    <div id="fileError" class="file-error"></div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-icon">
                                        <i class="fas fa-edit"></i>
                                    </div>
                                    <textarea class="form-input" id="Note" name="Note" placeholder="Thư giới thiệu bản thân" rows="4"></textarea>
                        
                                </div>
                            </div>

                            <div class="form-actions">
                                <button type="button" onclick="SubmitRecruitment()" class="btn-submit">
                                    <span class="btn-text">
                                        <i class="fas fa-paper-plane"></i>
                                        Gửi đơn ứng tuyển
                                    </span>
                                    <div class="btn-loader">
                                        <div class="spinner"></div>
                                    </div>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Styles {
    <style>
        :root {
            --primary-blue: #0066cc;
            --secondary-blue: #004499;
            --light-blue: #e6f3ff;
            --gradient-blue: linear-gradient(135deg, #0066cc 0%, #004499 100%);
            --gradient-light: linear-gradient(135deg, #e6f3ff 0%, #cce6ff 100%);
            --text-dark: #2c3e50;
            --text-light: #6c757d;
            --white: #ffffff;
            --success: #28a745;
            --warning: #ffc107;
            --danger: #dc3545;
            --shadow: 0 10px 30px rgba(0, 102, 204, 0.1);
            --shadow-hover: 0 15px 40px rgba(0, 102, 204, 0.2);
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            line-height: 1.6;
            color: var(--text-dark);
        }

        /* Hero Section */
        .hero-section {
            background: var(--gradient-blue);
            min-height: 70vh;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 800;
            line-height: 1.2;
            margin-bottom: 1.5rem;
        }

        .text-gradient {
            background: linear-gradient(45deg, #ffffff, #e6f3ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero-subtitle {
            font-size: 1.25rem;
            color: rgba(255, 255, 255, 0.9);
            margin-bottom: 2rem;
            max-width: 500px;
        }

        .hero-buttons {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .btn-primary-custom {
            background: var(--white);
            color: var(--primary-blue);
            border: none;
            padding: 0.875rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(255, 255, 255, 0.2);
        }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(255, 255, 255, 0.3);
            color: var(--secondary-blue);
        }

        .btn-outline-white {
            background: transparent;
            color: var(--white);
            border: 2px solid rgba(255, 255, 255, 0.3);
            padding: 0.875rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-outline-white:hover {
            background: var(--white);
            color: var(--primary-blue);
            border-color: var(--white);
            transform: translateY(-2px);
        }

        /* Floating Cards */
        .hero-image {
            position: relative;
            height: 400px;
        }

        .floating-card {
            position: absolute;
            background: var(--white);
            border-radius: 20px;
            padding: 1rem 1.5rem;
            box-shadow: var(--shadow);
            display: flex;
            align-items: center;
            gap: 0.75rem;
            animation: float 3s ease-in-out infinite;
        }

        .floating-card i {
            color: var(--primary-blue);
            font-size: 1.5rem;
        }

        .floating-card span {
            font-weight: 600;
            color: var(--text-dark);
        }

        .floating-card:nth-child(1) {
            top: 20%;
            left: 10%;
            animation-delay: 0s;
        }

        .floating-card-2 {
            top: 50%;
            right: 20%;
            animation-delay: 1s;
        }

        .floating-card-3 {
            bottom: 20%;
            left: 20%;
            animation-delay: 2s;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }

        /* Hero Shapes */
        .hero-shapes {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            overflow: hidden;
            z-index: 1;
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            opacity: 0.1;
        }

        .shape-1 {
            width: 300px;
            height: 300px;
            background: var(--white);
            top: -150px;
            right: -150px;
        }

        .shape-2 {
            width: 200px;
            height: 200px;
            background: var(--white);
            bottom: -100px;
            left: -100px;
        }

        .shape-3 {
            width: 150px;
            height: 150px;
            background: var(--white);
            top: 50%;
            left: -75px;
        }

        /* Main Content */
        .main-content {
            background: #f8fafc;
        }

        /* Stats Section */
        .stats-section {
            background: var(--white);
            margin-top: -50px;
            position: relative;
            z-index: 10;
        }

        .stat-card {
            background: var(--white);
            border-radius: 20px;
            padding: 2rem;
            text-align: center;
            box-shadow: var(--shadow);
            transition: all 0.3s ease;
            border: 1px solid rgba(0, 102, 204, 0.1);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            background: var(--gradient-light);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
        }

        .stat-icon i {
            color: var(--primary-blue);
            font-size: 1.5rem;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--primary-blue);
            margin-bottom: 0.5rem;
        }

        .stat-label {
            font-weight: 600;
            color: var(--text-light);
        }

        /* Section Titles */
        .section-title {
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 1rem;
            color: var(--text-dark);
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        .section-subtitle {
            font-size: 1.125rem;
            color: var(--text-light);
            margin-bottom: 0;
        }

        /* Feature Cards */
        .feature-card {
            background: var(--white);
            border-radius: 20px;
            padding: 2rem;
            height: 100%;
            box-shadow: var(--shadow);
            transition: all 0.3s ease;
            border: 1px solid rgba(0, 102, 204, 0.05);
        }

        .feature-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-hover);
        }

        .feature-icon {
            width: 70px;
            height: 70px;
            background: var(--gradient-blue);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
        }

        .feature-icon i {
            color: var(--white);
            font-size: 1.5rem;
        }

        .feature-title {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: var(--text-dark);
        }

        .feature-description {
            color: var(--text-light);
            line-height: 1.6;
        }

        /* Job Cards */
        .jobs-section {
            background: var(--white);
        }

        .job-item {
            margin-bottom: 1.5rem;
        }

        .job-card {
            background: var(--white);
            border-radius: 20px;
            padding: 1.5rem;
            box-shadow: var(--shadow);
            transition: all 0.3s ease;
            border: 1px solid rgba(0, 102, 204, 0.1);
        }

        .job-card:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-hover);
        }

        .job-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .job-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .job-icon {
            width: 50px;
            height: 50px;
            background: var(--gradient-light);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .job-icon i {
            color: var(--primary-blue);
            font-size: 1.25rem;
        }

        .job-title {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: var(--text-dark);
        }

        .job-meta {
            display: flex;
            gap: 1rem;
        }

        .job-location, .job-type {
            color: var(--text-light);
            font-size: 0.875rem;
        }

        .job-location i, .job-type i {
            margin-right: 0.25rem;
        }

        .status-badge {
            padding: 0.5rem 1rem;
            border-radius: 25px;
            font-size: 0.875rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .status-active {
            background: rgba(40, 167, 69, 0.1);
            color: var(--success);
        }

        .status-inactive {
            background: rgba(220, 53, 69, 0.1);
            color: var(--danger);
        }

        .job-tags {
            display: flex;
            gap: 0.75rem;
            margin-bottom: 1rem;
            flex-wrap: wrap;
        }

        .job-tag {
            background: var(--light-blue);
            color: var(--primary-blue);
            padding: 0.5rem 1rem;
            border-radius: 25px;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .job-actions {
            display: flex;
            gap: 1rem;
        }

        .btn-details, .btn-apply {
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            border: none;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-details {
            background: rgba(0, 102, 204, 0.1);
            color: var(--primary-blue);
        }

        .btn-details:hover {
            background: rgba(0, 102, 204, 0.2);
        }

        .btn-apply {
            background: var(--gradient-blue);
            color: var(--white);
        }

        .btn-apply:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 102, 204, 0.3);
        }

        .job-content {
            margin-top: 1rem;
        }

        .job-description {
            background: #f8fafc;
            padding: 1.5rem;
            border-radius: 15px;
            color: var(--text-light);
        }

        /* Application Form */
        .application-section {
            background: var(--gradient-light);
        }

        .application-form-wrapper {
            background: var(--white);
            border-radius: 25px;
            box-shadow: var(--shadow-hover);
            overflow: hidden;
        }

        .form-header {
            background: var(--gradient-blue);
            color: var(--white);
            padding: 3rem 2rem;
            text-align: center;
        }

        .form-icon {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
        }

        .form-icon i {
            font-size: 2rem;
        }

        .form-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .form-subtitle {
            font-size: 1.125rem;
            opacity: 0.9;
            margin-bottom: 0;
        }

        .application-form {
            padding: 3rem;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .form-group {
            position: relative;
        }

        .input-group {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-blue);
            z-index: 2;
        }

        .form-input {
            width: 100%;
            padding: 1rem 1rem 1rem 3rem;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 1rem;
            background: var(--white);
            transition: all 0.3s ease;
        }

