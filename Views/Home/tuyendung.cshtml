@section Scripts{
    <script>
        function SubmitRecruitment(){
            var form = $('#recruitmentForm')[0];
            var data = new FormData(form);
            
            $.ajax({
                url: "/api/ungtuyencv",
                type: "POST",
                data: data,
                processData: false,
                contentType: false,
                beforeSend: function() {
                    Swal.fire({
                        title: "Đang xử lý",
                        html: "Vui lòng chờ trong giây lát...",
                        allowOutsideClick: false,
                        showConfirmButton: false,
                        willOpen: () => {
                            Swal.showLoading();
                        }
                    });
                },
                success: function(response){
                    if(response.status){
                        Swal.fire({
                            icon: "success",
                            title: "Thành công!",
                            text: response.message,
                            showConfirmButton: false,
                            timer: 2000
                        });
                        $('#recruitmentForm')[0].reset();
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Thất bại!",
                            text: response.message
                        });
                    }
                }
            });
        }
    </script>
