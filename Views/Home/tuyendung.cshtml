@section Scripts {
    <script>
        $(document).ready(function() {
            // Animate statistics on scroll
            animateStats();
            
            // Smooth scrolling for navigation
            setupSmoothScrolling();
            
            // File upload validation
            setupFileUpload();
            
            // Form input animations
            setupFormInputs();
        });

        // Statistics animation
        function animateStats() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const number = entry.target;
                        const target = parseInt(number.dataset.count);
                        animateNumber(number, target);
                    }
                });
            });

            document.querySelectorAll('.stat-number').forEach(number => {
                observer.observe(number);
            });
        }

        function animateNumber(element, target) {
            let current = 0;
            const increment = target / 50;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    element.textContent = target + (target === 1000 ? '+' : '');
                    clearInterval(timer);
                } else {
                    element.textContent = Math.floor(current);
                }
            }, 40);
        }

        // Smooth scrolling
        function setupSmoothScrolling() {
            $('a[href^="#"]').on('click', function(event) {
                event.preventDefault();
                const target = $($(this).attr('href'));
                if (target.length) {
                    $('html, body').animate({
                        scrollTop: target.offset().top - 80
                    }, 800);
                }
            });
        }

        // Scroll to form function
        function scrollToForm() {
            $('html, body').animate({
                scrollTop: $('#application-form').offset().top - 80
            }, 800);
        }

        // File upload setup
        function setupFileUpload() {
            const fileInput = $('#CV_Url');
            const fileUpload = $('.file-upload');
            const fileError = $('.file-error');

            // Drag and drop events
            fileUpload.on('dragover', function(e) {
                e.preventDefault();
                $(this).addClass('dragover');
            });

            fileUpload.on('dragleave', function(e) {
                e.preventDefault();
                $(this).removeClass('dragover');
            });

            fileUpload.on('drop', function(e) {
                e.preventDefault();
                $(this).removeClass('dragover');
                const files = e.originalEvent.dataTransfer.files;
                if (files.length > 0) {
                    fileInput[0].files = files;
                    validateFile(files[0]);
                }
            });

            // File input change
            fileInput.on('change', function() {
                if (this.files.length > 0) {
                    validateFile(this.files[0]);
                }
            });

            function validateFile(file) {
                const allowedTypes = ['application/pdf', 'application/msword', 'application/vnd.openxmlformats-officedocument.wordprocessingml.document'];
                const maxSize = 5 * 1024 * 1024; // 5MB

                fileError.text('').hide();

                if (!allowedTypes.includes(file.type)) {
                    fileError.text('Định dạng file không hợp lệ. Chỉ chấp nhận PDF, DOC, DOCX.').show();
                    fileInput.val('');
                    return false;
                }

                if (file.size > maxSize) {
                    fileError.text('Kích thước file vượt quá 5MB.').show();
                    fileInput.val('');
                    return false;
                }

                // Update UI to show file selected
                $('.file-upload-content h6').text('File đã chọn: ' + file.name);
                $('.file-upload').addClass('file-selected');
                
                return true;
            }
        }

        // Form input animations
        function setupFormInputs() {
            $('.form-input').on('focus blur', function() {
                $(this).parent().toggleClass('focused');
            });

            $('.form-input').each(function() {
                if ($(this).val()) {
                    $(this).parent().addClass('has-value');
                }
            });

            $('.form-input').on('input', function() {
                if ($(this).val()) {
                    $(this).parent().addClass('has-value');
                } else {
                    $(this).parent().removeClass('has-value');
                }
            });
        }

        // Submit recruitment form
        function SubmitRecruitment() {
            const form = $('#recruitmentForm')[0];
            const submitBtn = $('.btn-submit');
            
            // Basic validation
            if (!validateForm()) {
                return;
            }

            const formData = new FormData(form);
            
            // Show loading state
            submitBtn.addClass('loading');
            submitBtn.prop('disabled', true);

            $.ajax({
                url: "/api/ungtuyencv",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    submitBtn.removeClass('loading');
                    submitBtn.prop('disabled', false);
                    
                    if (response.status) {
                        Swal.fire({
                            icon: "success",
                            title: "Ứng tuyển thành công!",
                            text: response.message,
                            confirmButtonColor: "#0066cc",
                            showConfirmButton: false,
                            timer: 3000
                        });
                        
                        // Reset form
                        form.reset();
                        $('.input-group').removeClass('has-value focused');
                        $('.file-upload-content h6').text('Tải lên CV của bạn');
                        $('.file-upload').removeClass('file-selected');
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Có lỗi xảy ra!",
                            text: response.message,
                            confirmButtonColor: "#0066cc"
                        });
                    }
                },
                error: function() {
                    submitBtn.removeClass('loading');
                    submitBtn.prop('disabled', false);
                    
                    Swal.fire({
                        icon: "error",
                        title: "Lỗi kết nối!",
                        text: "Vui lòng thử lại sau.",
                        confirmButtonColor: "#0066cc"
                    });
                }
            });
        }

        // Form validation
        function validateForm() {
            let isValid = true;
            const requiredFields = ['Name', 'Position', 'Phone', 'Email', 'Address', 'Sex'];
            
            requiredFields.forEach(field => {
                const input = $(`#${field}`);
                if (!input.val().trim()) {
                    input.addClass('error');
                    isValid = false;
                } else {
                    input.removeClass('error');
                }
            });

            // Email validation
            const email = $('#Email').val();
            const atSymbol = String.fromCharCode(64);
            if (email && (email.indexOf(atSymbol) === -1 || !email.includes('.'))) {
                $('#Email').addClass('error');
                isValid = false;
            }

            // Phone validation  
            const phone = $('#Phone').val();
            if (phone && (phone.length < 10 || phone.length > 11 || isNaN(phone))) {
                $('#Phone').addClass('error');
                isValid = false;
            }

            if (!isValid) {
                Swal.fire({
                    icon: "warning",
                    title: "Thông tin chưa đầy đủ!",
                    text: "Vui lòng điền đầy đủ thông tin bắt buộc.",
                    confirmButtonColor: "#0066cc"
                });
            }

            return isValid;
        }

        // Add error styles
        $('<style>')
            .prop('type', 'text/css')
            .html(`
                .form-input.error {
                    border-color: #dc3545 !important;
                    box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.1) !important;
                }
                .file-upload.file-selected {
                    border-color: #0066cc;
                    background: rgba(0, 102, 204, 0.05);
                }
                .file-upload.dragover {
                    border-color: #0066cc;
                    background: rgba(0, 102, 204, 0.1);
                    transform: scale(1.02);
                }
            `)
            .appendTo('head');
    </script>
}
