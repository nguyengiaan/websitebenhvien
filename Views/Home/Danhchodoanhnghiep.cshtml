    }

    .search-input input::placeholder {
        color: var(--secondary-color);
    }

    .search-btn {
        background: var(--gradient-primary);
        border: none;
        color: var(--white);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: var(--transition);
    }

