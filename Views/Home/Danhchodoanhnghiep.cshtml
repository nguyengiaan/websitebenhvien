@model IEnumerable<websitebenhvien.Models.Enitity.Forbusiness>
@{
    ViewData["Title"] = "Dành cho doanh nghiệp - Bệnh viện Mỹ Phước";
    ViewData["Description"] = "Khám phá các gói dịch vụ y tế chuyên nghiệp dành cho doanh nghiệp tại Bệnh viện Mỹ Phước. Chúng tôi cung cấp giải pháp chăm sóc sức khỏe toàn diện cho nhân viên của bạn.";
    ViewData["Keywords"] = "Dành cho doanh nghiệp, dịch vụ y tế doanh nghiệp, chăm sóc sức khỏe nhân viên, gói dịch vụ y tế, Bệnh viện Mỹ Phước";
    ViewData["Image"] = "/Images/Logo-rm.png";

}
<!-- Hero Section -->

<!-- Search & Filter Section -->
<div class="business-page">
<section class="search-section">
    <div class="container">
        <div class="search-wrapper">
            <div class="search-header">
                <h3 class="search-title">Tìm kiếm dịch vụ phù hợp</h3>
                <p class="search-subtitle">Khám phá các gói dịch vụ y tế dành cho doanh nghiệp</p>
            </div>
            <div class="search-box">
                <div class="search-input">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" id="searchInput" placeholder="Nhập từ khóa tìm kiếm...">
                    <button class="search-btn" onclick="searchBusinesses()" aria-label="Tìm kiếm doanh nghiệp">
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="services-section">
    <div class="container">
        <div class="services-grid" id="businessCards">
            @foreach (var item in Model)
            {
                <div class="service-card" data-name="@item.Name_Forbusiness.ToLower()" data-content="@item.Content_Forbusiness.ToLower()">
                    <div class="service-header">
                        <div class="service-icon">
                            @if (!string.IsNullOrEmpty(item.Icon_Forbusiness))
                            {
                                <img src="~/Uploads/@item.Icon_Forbusiness" alt="@item.Name_Forbusiness">
                            }
                            else
                            {
                                <i class="fas fa-briefcase-medical"></i>
                            }
                        </div>
                        <div class="service-info">
                            <h4 class="service-title">@item.Name_Forbusiness</h4>
                            <p class="service-preview">Dịch vụ y tế chuyên nghiệp cho doanh nghiệp</p>
                        </div>
                        <button class="service-toggle" type="button" data-id="@item.Id_Forbusiness" aria-label="Xem chi tiết dịch vụ @item.Name_Forbusiness" aria-expanded="false" aria-controls="content_@item.Id_Forbusiness">
                            <i class="fas fa-chevron-down"></i>
                        </button>
                    </div>
                    
                    <div class="service-content" id="content_@item.Id_Forbusiness">
                        <div class="service-body">
                            <div class="content-wrapper">
                                @Html.Raw(item.Content_Forbusiness)
                            </div>
                            <div class="service-actions">
                                <a href="@item.link_Forbusiness" class="btn btn-primary">
                                    <i class="fas fa-phone me-2"></i>Liên hệ tư vấn
                                </a>
                                <a href="@item.link_Forbusiness_1" class="btn btn-outline">
                                    <i class="fas fa-info-circle me-2"></i>Chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- No Results -->
      
    </div>
</section>
</div>
@section Styles {
<style>
    .business-page {
        --primary-color: #2563eb;
        --primary-dark: #1d4ed8;
        --primary-light: #dbeafe;
        --secondary-color: #64748b;
        --success-color: #059669;
        --warning-color: #d97706;
        --danger-color: #dc2626;
        --dark-color: #1e293b;
        --light-color: #f8fafc;
        --white: #ffffff;
        --gradient-primary: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
        --gradient-secondary: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        --shadow-lg: 0 10px 25px -3px rgba(0, 0, 0, 0.1);
        --shadow-xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        --border-radius: 12px;
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .business-page * {
        box-sizing: border-box;
    }

    .business-page {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        line-height: 1.6;
        color: var(--dark-color);
    }

    /* Hero Section */
    .business-page .hero-business {
        background: var(--gradient-primary);
        min-height: 80vh;
        position: relative;
        display: flex;
        align-items: center;
        overflow: hidden;
    }

    .business-page .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(37, 99, 235, 0.9) 0%, rgba(29, 78, 216, 0.95) 100%);
        z-index: 1;
    }

    .business-page .hero-content {
        position: relative;
        z-index: 2;
    }

    .business-page .hero-badge {
        display: inline-flex;
        align-items: center;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 50px;
        padding: 0.75rem 1.5rem;
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 2rem;
        animation: fadeInUp 0.8s ease-out;
    }

    .business-page .hero-title {
        font-size: 3.5rem;
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        animation: fadeInUp 0.8s ease-out 0.2s both;
    }

    .business-page .text-gradient {
        background: linear-gradient(45deg, #ffffff, #e0e7ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .business-page .hero-subtitle {
        font-size: 1.25rem;
        opacity: 0.9;
        max-width: 600px;
        margin: 0 auto 3rem;
        animation: fadeInUp 0.8s ease-out 0.4s both;
    }

    .business-page .hero-stats {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        animation: fadeInUp 0.8s ease-out 0.6s both;
    }

    .business-page .stat-item {
        text-align: center;
    }

    .business-page .stat-number {
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
    }

    .business-page .stat-label {
        font-size: 0.875rem;
        opacity: 0.8;
    }

    .business-page .stat-divider {
        width: 1px;
        height: 40px;
        background: rgba(255, 255, 255, 0.3);
    }

    .business-page .hero-shapes {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        overflow: hidden;
        z-index: 0;
    }

    .business-page .shape {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        animation: float 6s ease-in-out infinite;
    }

    .business-page .shape-1 {
        width: 300px;
        height: 300px;
        top: -150px;
        right: -150px;
        animation-delay: 0s;
    }

    .business-page .shape-2 {
        width: 200px;
        height: 200px;
        bottom: -100px;
        left: -100px;
        animation-delay: 2s;
    }

    .business-page .shape-3 {
        width: 150px;
        height: 150px;
        top: 50%;
        left: -75px;
        animation-delay: 4s;
    }

    /* Search Section */
    .business-page .search-section {
        background: var(--white);
        padding: 4rem 0;
        margin-top: -2rem;
        position: relative;
        z-index: 10;
    }

    .business-page .search-wrapper {
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }

    .business-page .search-header {
        margin-bottom: 2rem;
    }

    .business-page .search-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 0.5rem;
    }

    .business-page .search-subtitle {
        color: var(--secondary-color);
        font-size: 1.125rem;
    }

    .business-page .search-box {
        position: relative;
        max-width: 600px;
        margin: 0 auto;
    }

    .business-page .search-input {
        position: relative;
        display: flex;
        align-items: center;
        background: var(--white);
        border: 2px solid #e2e8f0;
        border-radius: 60px;
        padding: 0.75rem;
        box-shadow: var(--shadow-lg);
        transition: var(--transition);
    }

    .business-page .search-input:focus-within {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
    }

    .business-page .search-icon {
        color: var(--secondary-color);
        margin: 0 1rem;
    }

    .business-page .search-input input {
        flex: 1;
        border: none;
        outline: none;
        font-size: 1rem;
        color: var(--dark-color);
        background: transparent;
    }

    .business-page .search-input input::placeholder {
        color: var(--secondary-color);
    }

    .business-page .search-btn {
        background: var(--gradient-primary);
        border: none;
        color: var(--white);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: var(--transition);
    }

    .business-page .search-btn:hover {
        transform: scale(1.05);
        box-shadow: var(--shadow);
    }

    /* Services Section */
    .business-page .services-section {
        background: var(--light-color);
        padding: 5rem 0;
    }

    .business-page .services-grid {
        display: grid;
        gap: 2rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    .business-page .service-card {
        background: var(--white);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        transition: var(--transition);
        overflow: hidden;
    }

    .business-page .service-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-xl);
    }

    .business-page .service-header {
        display: flex;
        align-items: center;
        padding: 2rem;
        cursor: pointer;
    }

    .business-page .service-icon {
        width: 60px;
        height: 60px;
        background: var(--primary-light);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1.5rem;
        flex-shrink: 0;
    }

    .business-page .service-icon img {
        width: 32px;
        height: 32px;
        border-radius: 50%;
    }

    .business-page .service-icon i {
        color: var(--primary-color);
        font-size: 1.5rem;
    }

    .business-page .service-info {
        flex: 1;
    }

    .business-page .service-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 0.25rem;
    }

    .business-page .service-preview {
        color: var(--secondary-color);
        margin: 0;
        font-size: 0.875rem;
    }

    .business-page .service-toggle {
        background: var(--light-color);
        border: none;
        color: var(--secondary-color);
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: var(--transition);
    }

    .business-page .service-toggle:hover {
        background: var(--primary-light);
        color: var(--primary-color);
    }

    .business-page .service-toggle.active {
        background: var(--primary-color);
        color: var(--white);
        transform: rotate(180deg);
    }

    .business-page .service-content {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        background: var(--light-color);
    }

    .business-page .service-content.active {
        max-height: 2000px;
    }

    .business-page .service-body {
        padding: 2rem;
    }

    .business-page .content-wrapper {
        font-size: 1rem;
        line-height: 1.7;
        color: var(--dark-color);
        margin-bottom: 2rem;
    }

    /* Make long article content scroll inside the card to avoid stretching the page */
    .business-page .content-wrapper {
        max-height: 600px; /* desktop default */
        overflow: auto;
        padding-right: 0.5rem; /* space for scrollbar */
        -webkit-overflow-scrolling: touch; /* smooth scrolling on iOS */
    }

    /* Smaller max-height on small screens */
    @@media (max-width: 768px) {
        .business-page .content-wrapper {
            max-height: 350px;
        }
    }

    .business-page .content-wrapper h1,
    .business-page .content-wrapper h2,
    .business-page .content-wrapper h3,
    .business-page .content-wrapper h4,
    .business-page .content-wrapper h5,
    .business-page .content-wrapper h6 {
        color: var(--dark-color);
        font-weight: 700;
        margin: 1.5rem 0 1rem;
    }

    .business-page .content-wrapper p {
        margin-bottom: 1rem;
        text-align: justify;
    }

    .business-page .content-wrapper ul,
    .business-page .content-wrapper ol {
        margin: 1rem 0;
        padding-left: 1.5rem;
    }

    .business-page .content-wrapper li {
        margin-bottom: 0.5rem;
    }

    .business-page .service-actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .business-page .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.875rem 2rem;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        border: 2px solid transparent;
        cursor: pointer;
        transition: var(--transition);
        font-size: 0.875rem;
    }

    .business-page .btn-primary {
