@model IEnumerable<websitebenhvien.Models.Enitity.Forbusiness>

<!-- Hero Section -->

<!-- Search & Filter Section -->
<section class="search-section">
    <div class="container">
        <div class="search-wrapper">
            <div class="search-header">
                <h3 class="search-title">Tìm kiếm dịch vụ phù hợp</h3>
                <p class="search-subtitle">Khám phá các gói dịch vụ y tế dành cho doanh nghiệp</p>
            </div>
            <div class="search-box">
                <div class="search-input">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" id="searchInput" placeholder="Nhập từ khóa tìm kiếm...">
                    <button class="search-btn" onclick="searchBusinesses()">
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="services-section">
    <div class="container">
        <div class="services-grid" id="businessCards">
            @foreach (var item in Model)
            {
                <div class="service-card" data-name="@item.Name_Forbusiness.ToLower()" data-content="@item.Content_Forbusiness.ToLower()">
                    <div class="service-header">
                        <div class="service-icon">
                            @if (!string.IsNullOrEmpty(item.Icon_Forbusiness))
                            {
                                <img src="~/Resources/@item.Icon_Forbusiness" alt="@item.Name_Forbusiness">
                            }
                            else
                            {
                                <i class="fas fa-briefcase-medical"></i>
                            }
                        </div>
                        <div class="service-info">
                            <h4 class="service-title">@item.Name_Forbusiness</h4>
                            <p class="service-preview">Dịch vụ y tế chuyên nghiệp cho doanh nghiệp</p>
                        </div>
                        <button class="service-toggle" onclick="toggleService('@item.Id_Forbusiness', this)">
                            <i class="fas fa-chevron-down"></i>
                        </button>
                    </div>
                    
                    <div class="service-content" id="content_@item.Id_Forbusiness">
                        <div class="service-body">
                            <div class="content-wrapper">
                                @Html.Raw(item.Content_Forbusiness)
                            </div>
                            <div class="service-actions">
                                <a href="@item.link_Forbusiness" class="btn btn-primary">
                                    <i class="fas fa-phone me-2"></i>Liên hệ tư vấn
                                </a>
                                <a href="@item.link_Forbusiness_1" class="btn btn-outline">
                                    <i class="fas fa-info-circle me-2"></i>Chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- No Results -->
        <div id="noResults" class="no-results">
            <div class="no-results-content">
                <i class="fas fa-search-minus"></i>
                <h4>Không tìm thấy kết quả</h4>
                <p>Vui lòng thử lại với từ khóa khác hoặc liên hệ trực tiếp với chúng tôi</p>
                <button class="btn btn-primary" onclick="document.getElementById('searchInput').value=''; searchBusinesses();">
                    Xem tất cả dịch vụ
                </button>
            </div>
        </div>
    </div>
</section>
@section Styles {
<style>
    :root {
        --primary-color: #2563eb;
        --primary-dark: #1d4ed8;
        --primary-light: #dbeafe;
        --secondary-color: #64748b;
        --success-color: #059669;
        --warning-color: #d97706;
        --danger-color: #dc2626;
        --dark-color: #1e293b;
        --light-color: #f8fafc;
        --white: #ffffff;
        --gradient-primary: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
        --gradient-secondary: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        --shadow-lg: 0 10px 25px -3px rgba(0, 0, 0, 0.1);
        --shadow-xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        --border-radius: 12px;
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    * {
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        line-height: 1.6;
        color: var(--dark-color);
    }

