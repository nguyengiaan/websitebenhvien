@model IEnumerable<websitebenhvien.Models.Enitity.Forbusiness>

<div class="container-fluid py-5 business-section">
    <h1 class="text-center mb-5 title-animated">
        <i class="fas fa-building me-3 icon-pulse"></i>Thông Tin Dành Cho Doanh Nghiệp
    </h1>

    <div class="row g-4 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 d-flex">
                <div class="business-card w-100">
                    <div class="card-header-custom">
                        <div class="header-background"></div>
                        <div class="card-icon">
                            <i class="fas fa-gem icon-3d"></i>
                        </div>
                        <h5 class="card-title">@item.Name_Forbusiness</h5>
                        <button class="expand-btn" onclick="toggleContent('@item.Id_Forbusiness')">
                            <i class="fas fa-chevron-down"></i>
                        </button>
                    </div>

                    <div id="content_@item.Id_Forbusiness" class="collapse h-100">
                        <div class="card-body h-100">
                            <div class="content-wrapper h-100">
                                @Html.Raw(item.Content_Forbusiness)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .business-section {
        background: linear-gradient(120deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 4rem 0;
        position: relative;
        overflow: hidden;
    }

    .business-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml;base64,') repeat;
        opacity: 0.4;
    }

    .title-animated {
        color: #2d3748;
        font-weight: 900;
        font-size: 3.5rem;
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
        background: linear-gradient(45deg, #2d3748, #4299e1, #667eea);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: gradientBG 10s ease infinite;
        letter-spacing: -1px;
    }

    .icon-pulse {
        animation: pulse 2s infinite;
        color: #4299e1;
        filter: drop-shadow(0 0 8px rgba(66, 153, 225, 0.5));
    }

    .business-card {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .business-card:hover {
        transform: translateY(-15px) scale(1.02);
        box-shadow: 0 30px 60px rgba(0,0,0,0.12);
    }

    .card-header-custom {
        position: relative;
        padding: 35px 25px;
        text-align: center;
        background: linear-gradient(135deg, #4299e1 0%, #667eea 100%);
        color: white;
        clip-path: polygon(0 0, 100% 0, 100% 85%, 50% 100%, 0 85%);
    }

    .card-icon {
        width: 70px;
        height: 70px;
        margin: 0 auto 20px;
        background: rgba(255,255,255,0.25);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        backdrop-filter: blur(5px);
    }

    .icon-3d {
        font-size: 28px;
        animation: float 3s ease-in-out infinite;
        filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.5));
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 800;
        margin-bottom: 20px;
        color: white;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
    }

    .expand-btn {
        background: rgba(255,255,255,0.25);
        border: none;
        color: white;
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        backdrop-filter: blur(5px);
    }

    .expand-btn:hover {
        background: rgba(255,255,255,0.4);
        transform: scale(1.15) rotate(180deg);
    }

    .content-wrapper {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.85));
        border-radius: 20px;
        padding: 30px;
        margin: 25px;
        line-height: 1.9;
        font-size: 1.15rem;
        color: #2d3748;
        box-shadow: inset 0 2px 10px rgba(0,0,0,0.05);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    @@keyframes float {
        0% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-12px) rotate(10deg); }
        100% { transform: translateY(0px) rotate(0deg); }
    }

    @@keyframes gradientBG {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    @@keyframes pulse {
        0% { transform: scale(1); opacity: 1; filter: brightness(1); }
        50% { transform: scale(1.2); opacity: 0.8; filter: brightness(1.2); }
        100% { transform: scale(1); opacity: 1; filter: brightness(1); }
    }

    @@media (max-width: 768px) {
        .title-animated {
            font-size: 2.2rem;
        }
        
        .card-title {
            font-size: 1.3rem;
        }

        .content-wrapper {
            font-size: 1.05rem;
            padding: 20px;
            margin: 15px;
        }

        .card-icon {
            width: 60px;
            height: 60px;
        }

        .icon-3d {
            font-size: 24px;
        }

        .business-section {
            padding: 2rem 0;
        }
    }
</style>

<script>
function toggleContent(id) {
    // Hide all content divs first
    document.querySelectorAll('.collapse').forEach(div => {
        if (div.id !== 'content_' + id) {
            div.classList.remove('show');
        }
    });
    
    // Toggle the selected content
    const selectedContent = document.getElementById('content_' + id);
    selectedContent.classList.toggle('show');
}
</script>
