        padding: 5rem 0;
    }

    .services-grid {
        display: grid;
        gap: 2rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    .service-card {
        background: var(--white);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        transition: var(--transition);
