        color: var(--white);
    }

    .business-page .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
        color: var(--white);
        text-decoration: none;
    }

    .business-page .btn-outline {
        background: transparent;
        color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .business-page .btn-outline:hover {
        background: var(--primary-color);
        color: var(--white);
        text-decoration: none;
    }

    /* No Results */
    .business-page .no-results {
        display: none;
        text-align: center;
        padding: 4rem 0;
    }

    .business-page .no-results.show {
        display: block;
    }

    .business-page .no-results-content {
        max-width: 400px;
        margin: 0 auto;
    }

    .business-page .no-results-content i {
        font-size: 4rem;
        color: var(--secondary-color);
        margin-bottom: 1.5rem;
    }

    .business-page .no-results-content h4 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 1rem;
    }

    .business-page .no-results-content p {
        color: var(--secondary-color);
        margin-bottom: 2rem;
    }

    /* Animations */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-20px) rotate(180deg);
        }
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .business-page .hero-title {
            font-size: 2.5rem;
        }

        .business-page .hero-subtitle {
            font-size: 1rem;
        }

        .business-page .hero-stats {
            flex-direction: column;
            gap: 1.5rem;
        }

        .business-page .stat-divider {
            width: 40px;
            height: 1px;
        }

        .business-page .search-title {
            font-size: 1.5rem;
        }

        .business-page .search-subtitle {
            font-size: 1rem;
        }

        .business-page .service-header {
            padding: 1.5rem;
        }

        .business-page .service-icon {
            width: 50px;
            height: 50px;
            margin-right: 1rem;
        }

        .business-page .service-title {
            font-size: 1.125rem;
        }

        .business-page .service-body {
            padding: 1.5rem;
        }

        .business-page .service-actions {
            flex-direction: column;
        }

        .business-page .btn {
            width: 100%;
        }

        .business-page .hero-shapes {
            display: none;
        }
    }

    @@media (max-width: 480px) {
        .business-page .hero-business {
            min-height: 70vh;
        }

        .business-page .hero-title {
            font-size: 2rem;
        }

        .business-page .search-section {
            padding: 3rem 0;
        }

        .business-page .services-section {
            padding: 3rem 0;
        }

        .business-page .service-header {
            padding: 1.25rem;
        }

        .business-page .service-body {
            padding: 1.25rem;
        }
    }

    /* Hidden by default */
    .business-page .service-card[style*="display: none"] {
        display: none !important;
    }
</style>
}

@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function() {
    let currentOpenContent = null;

    // Animation on scroll (unchanged)
    const animateOnScroll = () => {
        const elements = document.querySelectorAll('[data-aos]');
        elements.forEach(el => {
            const rect = el.getBoundingClientRect();
            const isVisible = rect.top < window.innerHeight && rect.bottom > 0;
            if (isVisible) {
                el.style.opacity = '1';
                el.style.transform = 'translateY(0)';
            }
        });
    };
    document.querySelectorAll('[data-aos]').forEach(el => {
        el.style.opacity = '0';
        el.style.transform = 'translateY(30px)';
        el.style.transition = 'all 0.8s cubic-bezier(0.4, 0, 0.2, 1)';
    });
    window.addEventListener('scroll', animateOnScroll);
    animateOnScroll();

    // Counter animation (unchanged)
    const animateCounters = () => {
        const counters = document.querySelectorAll('.stat-number');
        counters.forEach(counter => {
            const target = parseInt(counter.getAttribute('data-count') || counter.textContent.replace(/[^0-9]/g, ''));
            const speed = 100;
            let count = 0;
            const increment = target / speed;
            const timer = setInterval(() => {
                count += increment;
                if (count >= target) {
                    count = target;
                    clearInterval(timer);
                }
                counter.textContent = Math.floor(count) + '+';
            }, 50);
        });
    };

    // Delegated service card toggle (click anywhere on card except interactive elements)
    const initServiceToggles = () => {
        const container = document.getElementById('businessCards');
        if (!container) return;
        container.addEventListener('click', function (e) {
            // If clicked directly on the toggle button, use it
            const toggle = e.target.closest('.service-toggle');
            if (toggle) {
                handleToggle(toggle);
                return;
            }
            // Otherwise, if click happened inside a card but not on other interactive elements, toggle that card
            const card = e.target.closest('.service-card');
            if (card) {
                const interactive = e.target.closest('a, button, input, select, textarea, label');
                if (interactive) return;
                const toggleBtn = card.querySelector('.service-toggle');
                if (toggleBtn) handleToggle(toggleBtn);
            }
        });
        function handleToggle(toggle) {
            const card = toggle.closest('.service-card');
            if (!card) return;
            const content = card.querySelector('.service-content');
            const icon = toggle.querySelector('i');
            // Close previously opened
            if (currentOpenContent && currentOpenContent !== content) {
                currentOpenContent.classList.remove('active');
                const otherButton = currentOpenContent.closest('.service-card').querySelector('.service-toggle');
                if (otherButton) {
                    otherButton.classList.remove('active');
                    otherButton.setAttribute('aria-expanded', 'false');
                    const otherIcon = otherButton.querySelector('i');
                    if (otherIcon) otherIcon.style.transform = 'rotate(0deg)';
                }
            }
            const isActive = content.classList.contains('active');
            if (isActive) {
                content.classList.remove('active');
                toggle.classList.remove('active');
                toggle.setAttribute('aria-expanded', 'false');
                if (icon) icon.style.transform = 'rotate(0deg)';
                currentOpenContent = null;
            } else {
                content.classList.add('active');
                toggle.classList.add('active');
                toggle.setAttribute('aria-expanded', 'true');
                if (icon) icon.style.transform = 'rotate(180deg)';
                currentOpenContent = content;
                setTimeout(() => {
                    const inner = content.querySelector('.content-wrapper');
                    if (inner) inner.scrollTop = 0;
                    card.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }, 100);
            }
        }
    };

    // ...existing code for search, floating shapes, parallax, etc...
    // (leave as is, just call initServiceToggles instead of old toggle logic)

    setTimeout(() => { animateCounters(); }, 1000);
    initServiceToggles();
    // ...existing code...
});
</script>
}
