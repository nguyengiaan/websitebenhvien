        }

        .search-subtitle {
            font-size: 1rem;
        }

        .service-header {
            padding: 1.5rem;
        }

        .service-icon {
            width: 50px;
            height: 50px;
            margin-right: 1rem;
        }

        .service-title {
            font-size: 1.125rem;
        }

        .service-body {
            padding: 1.5rem;
        }

        .service-actions {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }

        .hero-shapes {
            display: none;
        }
    }

    @@media (max-width: 480px) {
        .hero-business {
            min-height: 70vh;
        }

        .hero-title {
            font-size: 2rem;
        }

        .search-section {
            padding: 3rem 0;
        }

        .services-section {
            padding: 3rem 0;
        }

        .service-header {
            padding: 1.25rem;
        }

        .service-body {
            padding: 1.25rem;
        }
    }

    /* Hidden by default */
    .service-card[style*="display: none"] {
        display: none !important;
    }
</style>
}

@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Current open content tracker
    let currentOpenContent = null;

    // Animation on scroll
    const animateOnScroll = () => {
        const elements = document.querySelectorAll('[data-aos]');
        elements.forEach(el => {
            const rect = el.getBoundingClientRect();
            const isVisible = rect.top < window.innerHeight && rect.bottom > 0;
            
            if (isVisible) {
                el.style.opacity = '1';
                el.style.transform = 'translateY(0)';
            }
        });
    };

    // Initialize animations
    document.querySelectorAll('[data-aos]').forEach(el => {
        el.style.opacity = '0';
        el.style.transform = 'translateY(30px)';
        el.style.transition = 'all 0.8s cubic-bezier(0.4, 0, 0.2, 1)';
    });

    window.addEventListener('scroll', animateOnScroll);
    animateOnScroll();

    // Counter animation
    const animateCounters = () => {
        const counters = document.querySelectorAll('.stat-number');
        counters.forEach(counter => {
            const target = parseInt(counter.getAttribute('data-count') || counter.textContent.replace(/[^0-9]/g, ''));
            const speed = 100;
            let count = 0;
            
            const increment = target / speed;
            
            const timer = setInterval(() => {
                count += increment;
                if (count >= target) {
                    count = target;
                    clearInterval(timer);
                }
                counter.textContent = Math.floor(count) + '+';
            }, 50);
        });
    };

    // Service card toggle functionality
    const initServiceToggles = () => {
        const toggleButtons = document.querySelectorAll('.service-toggle');
        
        toggleButtons.forEach(button => {
            button.addEventListener('click', function() {
                const card = this.closest('.service-card');
                const content = card.querySelector('.service-content');
                const icon = this.querySelector('i');
                
                // Close all other cards
                if (currentOpenContent && currentOpenContent !== content) {
                    currentOpenContent.classList.remove('active');
                    const otherButton = currentOpenContent.closest('.service-card').querySelector('.service-toggle');
                    const otherIcon = otherButton.querySelector('i');
                    otherButton.classList.remove('active');
                    if (otherIcon) {
                        otherIcon.style.transform = 'rotate(0deg)';
                    }
                }
                
                // Toggle current card
                const isActive = content.classList.contains('active');
                
                if (isActive) {
                    content.classList.remove('active');
                    this.classList.remove('active');
                    if (icon) {
                        icon.style.transform = 'rotate(0deg)';
                    }
                    currentOpenContent = null;
                } else {
                    content.classList.add('active');
                    this.classList.add('active');
                    if (icon) {
                        icon.style.transform = 'rotate(180deg)';
                    }
                    currentOpenContent = content;
                    
                    // Smooth scroll to card
                    setTimeout(() => {
                        card.scrollIntoView({
                            behavior: 'smooth',
                            block: 'center'
                        });
                    }, 100);
                }
            });
        });
    };

    // Search functionality
    const initSearch = () => {
        const searchInput = document.getElementById('serviceSearch');
        
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchText = this.value.toLowerCase().trim();
                searchBusinesses(searchText);
            });
            
            // Enter key handler
            searchInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    const searchButton = document.getElementById('searchBtn');
                    if (searchButton) {
                        searchButton.click();
                    }
                }
            });
        }
    };

    // Search businesses function
    function searchBusinesses(searchText = '') {
        if (!searchText) {
            const searchInput = document.getElementById('serviceSearch');
            searchText = searchInput ? searchInput.value.toLowerCase().trim() : '';
        }

        const businessItems = document.querySelectorAll('.service-card');
        let hasResults = false;

        businessItems.forEach(item => {
            const title = item.querySelector('.service-title');
            const content = item.querySelector('.content-wrapper');
            
            const titleText = title ? title.textContent.toLowerCase() : '';
            const contentText = content ? content.textContent.toLowerCase() : '';
            
            const searchTerms = searchText.split(' ').filter(term => term.length > 0);
            
            const matchesAllTerms = searchTerms.length === 0 || searchTerms.every(term =>
                titleText.includes(term) || contentText.includes(term)
            );

            if (matchesAllTerms || searchText === '') {
                item.style.display = 'block';
                item.style.opacity = '1';
                hasResults = true;
            } else {
                item.style.display = 'none';
                item.style.opacity = '0';
                // Close if expanded
                const content = item.querySelector('.service-content');
                const toggle = item.querySelector('.service-toggle');
                if (content && toggle && content.classList.contains('active')) {
                    content.classList.remove('active');
                    toggle.classList.remove('active');
                }
            }
        });

        const noResultsElement = document.getElementById('noResults');
        if (noResultsElement) {
            if (searchText !== '' && !hasResults) {
                noResultsElement.classList.add('show');
            } else {
                noResultsElement.classList.remove('show');
            }
        }
    }

    // Search button click handler
    const initSearchButton = () => {
        const searchButton = document.getElementById('searchBtn');
        if (searchButton) {
            searchButton.addEventListener('click', function(e) {
                e.preventDefault();
                const searchInput = document.getElementById('serviceSearch');
                if (searchInput) {
                    searchBusinesses(searchInput.value);
                    
                    // Smooth scroll to results
                    const servicesSection = document.querySelector('.services-section');
                    if (servicesSection) {
                        servicesSection.scrollIntoView({ 
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                }
            });
        }
    };

    // Floating shapes animation
    const initFloatingShapes = () => {
        const shapes = document.querySelectorAll('.shape');
        shapes.forEach((shape, index) => {
            const duration = 6 + (index * 2);
            const delay = index * 2;
            
            shape.style.animationDuration = duration + 's';
            shape.style.animationDelay = delay + 's';
        });
    };

    // Parallax effect for hero section
    const initParallax = () => {
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const heroShapes = document.querySelector('.hero-shapes');
            
            if (heroShapes && scrolled < window.innerHeight) {
                heroShapes.style.transform = 'translateY(' + (scrolled * 0.5) + 'px)';
            }
        });
    };

    // Click outside to close expanded cards
    document.addEventListener('click', function(e) {
        if (!e.target.closest('.service-card') && currentOpenContent) {
            currentOpenContent.classList.remove('active');
            const button = currentOpenContent.closest('.service-card').querySelector('.service-toggle');
            const icon = button ? button.querySelector('i') : null;
            if (button) button.classList.remove('active');
            if (icon) icon.style.transform = 'rotate(0deg)';
            currentOpenContent = null;
        }
    });

    // Initialize all features
    setTimeout(() => {
        animateCounters();
    }, 1000);
    
    initServiceToggles();
    initSearch();
    initSearchButton();
    initFloatingShapes();
    initParallax();

    console.log('🎉 Dành cho Doanh nghiệp page initialized successfully!');
});
</script>
}
