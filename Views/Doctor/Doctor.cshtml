@model IEnumerable<websitebenhvien.Models.EnitityVM.DoctorSpeciallyVM>
@{
    ViewData["Title"] = "Đội Ngũ Bác Sĩ Chuyên Khoa";
}

<div class="doctor-page">
    <!-- Hero Section -->
    <section class="hero-section" style="background: linear-gradient(135deg, #667eea 0%, #31a0d3 100%);">
        <div class="container">
            <div class="row align-items-center text-center text-white">
                <div class="col-12">
                    <div class="hero-content">
                        <div class="hero-icon mb-4">
                            <i class="fas fa-user-md fa-5x text-warning animated-pulse"></i>
                        </div>
                        <h1 class="display-3 fw-bold mb-4 animated-text">
                            ĐỘI NGŨ BÁC SĨ CHUYÊN KHOA
                        </h1>
                        <p class="lead mb-4 hero-subtitle">Đội ngũ bác sĩ giàu kinh nghiệm, tận tâm chăm sóc sức khỏe của bạn</p>
                        <div class="hero-divider mx-auto mb-4"></div>
                        <div class="hero-stats row justify-content-center">
                            <div class="col-md-3 col-6 mb-3">
                                <div class="stat-item">
                                    <h3 class="stat-number">50+</h3>
                                    <p class="stat-label">Bác sĩ</p>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <div class="stat-item">
                                    <h3 class="stat-number">15+</h3>
                                    <p class="stat-label">Chuyên khoa</p>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <div class="stat-item">
                                    <h3 class="stat-number">20+</h3>
                                    <p class="stat-label">Năm kinh nghiệm</p>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <div class="stat-item">
                                    <h3 class="stat-number">24/7</h3>
                                    <p class="stat-label">Hỗ trợ</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    @foreach (var specialty in Model)
    {
        <div class="specialty-header">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12">
                        <div class="specialty-title-wrapper">
                            <div class="specialty-icon">
                                <img src="/Uploads/@specialty.Thumnail" 
                                alt="@specialty.Name_Specialty"
                                 class="img-fluid rounded-circle">
                            </div>
                            <h2 class="specialty-title">@specialty.Name_Specialty</h2>
                            <div class="specialty-line"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <section class="doctors-section py-1">
            <div class="container">
                <!-- Doctors Carousel -->
                <div id="doctorsCarousel-@specialty.Id_Specialty" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @{
                            var doctorsPerSlide = 3;
                            var totalSlides = (int)Math.Ceiling((double)specialty.Doctors.Count / doctorsPerSlide);
                        }
                        
                        @for (int slideIndex = 0; slideIndex < totalSlides; slideIndex++)
                        {
                            <div class="carousel-item @(slideIndex == 0 ? "active" : "")">
                                <div class="row">
                                    @{
                                        var startIndex = slideIndex * doctorsPerSlide;
                                        var endIndex = Math.Min(startIndex + doctorsPerSlide, specialty.Doctors.Count);
                                        var slideDoctors = specialty.Doctors.Skip(startIndex).Take(endIndex - startIndex);
                                    }
                                    
                                    @foreach (var doctor in slideDoctors)
                                    {
                                        <div class="col-lg-4 col-md-6 mb-4">
                                            <div class="doctor-card h-100 shadow-sm">
                                                <div class="card-header-custom position-relative">
                                                    <img src="/Uploads/@doctor.Thumnail" class="doctor-image" alt="@doctor.Name" loading="lazy">
                                                    <div class="doctor-status">
                                                        <span class="badge bg-success">Đang khám</span>
                                                    </div>
                                                </div>
                                                <div class="card-body p-4">
                                                    <div class="text-center mb-3">
                                                        <h5 class="doctor-name fw-bold text-primary mb-1">@doctor.Name</h5>
                                                        <p class="doctor-specialty text-muted mb-2">
                                                            <i class="fas fa-stethoscope me-2 text-info"></i>@specialty.Name_Specialty
                                                        </p>
                                                        <div class="rating mb-3">
                                                            <i class="fas fa-star text-warning"></i>
                                                            <i class="fas fa-star text-warning"></i>
                                                            <i class="fas fa-star text-warning"></i>
                                                            <i class="fas fa-star text-warning"></i>
                                                            <i class="fas fa-star text-warning"></i>
                                                            <span class="ms-2 text-muted">(5/5)</span>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="doctor-info">
                                                        @if (!string.IsNullOrEmpty(doctor.Experiencework))
                                                        {
                                                            <div class="info-item d-flex align-items-center justify-content-start">
                                                                <i class="fas fa-graduation-cap text-info "></i>
                                                                <small class="ml-1 mt-2">@Html.Raw(doctor.Experiencework)</small>
                                                            </div>
                                                        }
                                                        @if (!string.IsNullOrEmpty(doctor.Organization))
                                                        {
                                                            <div class="info-item d-flex align-items-center  justify-content-start ">
                                                                <i class="fas fa-hospital text-success "></i>
                                                                <small class="ml-1 mt-2">@Html.Raw(doctor.Organization)</small>
                                                            </div>
                                                        }
                                                        @if (!string.IsNullOrEmpty(doctor.Training))
                                                        {
                                                            <div class="info-item d-flex align-items-center  justify-content-start ">
                                                                <i class="fas fa-medal text-warning "></i>
                                                                <small class="ml-1 mt-2">@Html.Raw(doctor.Training)</small>
                                                            </div>
                                                        }
                                                    </div>

                                                    <div class="card-actions">
                                                        <div class="row g-2">
                                                            <div class="col-12">
                                                                <a href="@doctor.Alias_url" class="btn btn-outline-info btn-sm w-100">
                                                                    <i class="fas fa-info-circle me-1"></i>Xem chi tiết
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>

                    @if (totalSlides > 1)
                    {
                        <!-- Carousel Controls -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#doctorsCarousel-@specialty.Id_Specialty" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#doctorsCarousel-@specialty.Id_Specialty" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>

                        <!-- Carousel Indicators -->
                        <div class="carousel-indicators">
                            @for (int i = 0; i < totalSlides; i++)
                            {
                                <button type="button" data-bs-target="#doctorsCarousel-@specialty.Id_Specialty" data-bs-slide-to="@i" 
                                        class="@(i == 0 ? "active" : "")" @(i == 0 ? "aria-current=\"true\"" : "") 
                                        aria-label="Slide @(i + 1)"></button>
                            }
                        </div>
                    }
                </div>
            </div>
        </section>
    }
  
   
    <!-- Doctors Grid Section -->
  
</div>
@section Styles
{
    <style>
    .text-purple {
        color: #6f42c1 !important;
    }
    
    .text-pink {
        color: #e83e8c !important;
    }

    .doctor-page {
        background-color: #f8f9fa;
    }

    /* Enhanced Hero Section */
    .hero-section {
        position: relative;
        overflow: hidden;
        min-height: 70vh;
        display: flex;
        align-items: center;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 40% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
        animation: float 6s ease-in-out infinite;
    }

    .hero-section::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100px;
        background: linear-gradient(135deg, transparent 0%, rgba(255, 255, 255, 0.1) 100%);
        clip-path: polygon(0 50%, 100% 0, 100% 100%, 0% 100%);
    }

    .hero-content {
        position: relative;
        z-index: 10;
    }

    .hero-icon {
        position: relative;
    }

    .animated-pulse {
        animation: pulse 2s ease-in-out infinite;
    }

    .animated-text {
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        animation: slideInDown 1s ease-out;
    }

    .hero-subtitle {
        font-size: 1.3rem;
        opacity: 0.9;
        animation: slideInUp 1s ease-out 0.3s both;
    }

    .hero-divider {
        width: 120px;
        height: 4px;
        background: linear-gradient(135deg, #ffc107, #ff8c00);
        border-radius: 2px;
        animation: slideInUp 1s ease-out 0.6s both;
        box-shadow: 0 2px 8px rgba(255, 193, 7, 0.4);
    }

    .hero-stats {
        animation: slideInUp 1s ease-out 0.9s both;
    }

    .stat-item {
        padding: 1rem;
        border-radius: 15px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
    }

    .stat-item:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.15);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #ffc107, #ff8c00);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-label {
        font-size: 0.9rem;
        opacity: 0.9;
        margin-bottom: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Specialty Header */
    .specialty-header {
        background: linear-gradient(135deg, #667eea 0%, #31a0d3 100%);
        padding: 3rem 0;
        margin: 4rem 0 2rem 0;
        position: relative;
        overflow: hidden;
    }

    .specialty-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 10% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 20%),
            radial-gradient(circle at 90% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 20%);
    }

    .specialty-title-wrapper {
        text-align: center;
        position: relative;
        z-index: 2;
    }

    .specialty-icon {
        display: inline-block;
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.3);
    }

    .specialty-icon i {
        font-size: 2rem;
        color: #ffc107;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    .specialty-title {
        color: white;
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .specialty-line {
        width: 100px;
        height: 3px;
        background: linear-gradient(135deg, #ffc107, #ff8c00);
        margin: 0 auto;
        border-radius: 2px;
        box-shadow: 0 2px 8px rgba(255, 193, 7, 0.4);
    }

    /* Enhanced Doctor Cards */
    .doctor-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.4s ease;
        border: none;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        position: relative;
    }

    .doctor-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(135deg, #667eea 0%, #31a0d3 100%);
        opacity: 0;
        transition: all 0.3s ease;
    }

    .doctor-card:hover::before {
        opacity: 1;
    }

    .doctor-card:hover {
        transform: translateY(-15px);
        box-shadow: 0 20px 40px rgba(102, 126, 234, 0.15);
    }

    .card-header-custom {
        height: 280px;
        overflow: hidden;
        background: linear-gradient(135deg, #667eea 10%, #31a0d3 90%);
        position: relative;
        -webkit-transform: translateZ(0);
        transform: translateZ(0);
    }

    .card-header-custom::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.2) 0%, transparent 50%),
            radial-gradient(circle at 70% 70%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
        pointer-events: none;
    }

    .doctor-status {
        position: absolute;
        top: 20px;
        right: 20px;
        z-index: 3;
    }

    .doctor-status .badge {
        padding: 0.6rem 1rem;
        font-size: 0.8rem;
        border-radius: 20px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    /* Enhanced Carousel Controls */
    .carousel-control-prev,
    .carousel-control-next {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #667eea 0%, #31a0d3 100%);
        border-radius: 50%;
        top: 50%;
        transform: translateY(-50%);
        margin: 0 -30px;
        transition: all 0.3s ease;
        border: 3px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
    }

    .carousel-control-prev:hover,
    .carousel-control-next:hover {
        transform: translateY(-50%) scale(1.15);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
    }

    .carousel-indicators {
        bottom: -80px;
        margin-bottom: 0;
    }

    .carousel-indicators button {
        background: linear-gradient(135deg, #667eea 0%, #31a0d3 100%);
        width: 15px;
        height: 15px;
        border-radius: 50%;
        border: none;
        margin: 0 8px;
        transition: all 0.3s ease;
        opacity: 0.6;
    }

    .carousel-indicators button.active {
        opacity: 1;
        transform: scale(1.3);
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

    /* Animations */
    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-10px) rotate(1deg); }
    }

    @@keyframes slideInDown {
        0% {
            opacity: 0;
            transform: translateY(-50px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideInUp {
        0% {
            opacity: 0;
            transform: translateY(50px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .hero-section {
            min-height: 60vh;
            padding: 2rem 0;
        }

        .animated-text {
            font-size: 2rem;
        }

        .hero-subtitle {
            font-size: 1.1rem;
        }

        .stat-number {
            font-size: 2rem;
        }

        .specialty-title {
            font-size: 2rem;
        }

        .carousel-control-prev,
        .carousel-control-next {
            width: 50px;
            height: 50px;
            margin: 0 -25px;
        }
        
        .carousel-indicators {
            bottom: -60px;
        }

        .card-header-custom {
            height: 220px;
        }
    }

    .doctor-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: all 0.3s ease;
        image-rendering: -webkit-optimize-contrast;
        image-rendering: crisp-edges;
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
        -webkit-transform: translateZ(0);
        transform: translateZ(0);
        filter: contrast(1.1) saturate(1.1) brightness(1.02);
    }

    .doctor-card:hover .doctor-image {
        transform: scale(1.05) translateZ(0);
        filter: contrast(1.15) saturate(1.15) brightness(1.05);
    }

    /* Image optimization for high DPI displays */
    @@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
        .doctor-image {
            image-rendering: -webkit-optimize-contrast;
            image-rendering: auto;
            filter: contrast(1.05) saturate(1.05) brightness(1.01);
        }
    }

    /* Prevent image blur on transform */
    .doctor-card {
        -webkit-transform: translateZ(0);
        transform: translateZ(0);
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
        -webkit-perspective: 1000px;
        perspective: 1000px;
    }
    </style>
}
