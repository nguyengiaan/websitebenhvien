@model websitebenhvien.Models.EnitityVM.ActivityCategoryPageVM
@{
    ViewData["Title"] = $"{Model.Category.Title} - Hoạt động bệnh viện";
    ViewData["Description"] = !string.IsNullOrEmpty(Model.Category.Description) ? Model.Category.Description : $"Các hoạt động thuộc danh mục {Model.Category.Title}";
    ViewData["Keywords"] = $"{Model.Category.Title}, hoạt động bệnh viện, sự kiện y tế";
    ViewData["Image"] = "/Images/Logo-rm.png";
}

<!-- Breadcrumb Section -->
<section class="breadcrumb-section bg-light py-4">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 bg-transparent">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none">
                        <i class="fas fa-home me-1"></i>Trang chủ
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index")" class="text-decoration-none">Hoạt động</a>
                </li>
                <li class="breadcrumb-item active fw-bold" aria-current="page">@Model.Category.Title</li>
            </ol>
        </nav>
    </div>
</section>

<!-- Category Header -->
<section class="category-header bg-gradient-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <div class="d-flex align-items-center mb-3">
                    <div class="category-icon me-4">
                        <i class="fas fa-folder-open fa-3x"></i>
                    </div>
                    <div>
                        <h1 class="display-5 fw-bold mb-2">@Model.Category.Title</h1>
                        <p class="lead mb-0 opacity-90">
                            @if (!string.IsNullOrEmpty(Model.Category.Description))
                            {
                                @Model.Category.Description
                            }
                            else
                            {
                                <span>Khám phá các hoạt động thuộc danh mục @Model.Category.Title</span>
                            }
                        </p>
                    </div>
                </div>
                
                <div class="d-flex flex-wrap gap-3 mt-4">
                    <div class="bg-white bg-opacity-20 rounded-pill px-3 py-2">
                        <i class="fas fa-newspaper me-2"></i>
                        <strong>@Model.TotalItems</strong> bài viết
                    </div>
                    <div class="bg-white bg-opacity-20 rounded-pill px-3 py-2">
                        <i class="fas fa-file-alt me-2"></i>
                        Trang <strong>@Model.CurrentPage</strong> / <strong>@Model.TotalPages</strong>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-center d-none d-lg-block">
                <div class="category-illustration">
                    <i class="fas fa-hospital-user fa-8x opacity-25"></i>
                </div>
            </div>
        </div>
    </div>
</section>

    <div class="row">
        <!-- Sidebar danh mục -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Danh mục hoạt động</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("Index")" class="list-group-item list-group-item-action">
                            <i class="fas fa-home"></i> Tất cả hoạt động
                        </a>
                        @{
                            var allCategories = ViewBag.AllCategories as List<websitebenhvien.Models.EnitityVM.ActivitycategoryVM>;
                        }
                        @if (allCategories != null)
                        {
                            @foreach (var category in allCategories)
                            {
                                <a href="@Url.Action("Category", new { categoryAlias = category.link_alias })" 
                                   class="list-group-item list-group-item-action @(category.Id_activitycategory == Model.Category.Id_activitycategory ? "active" : "")">
                                    <i class="fas fa-folder"></i> @category.Title
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- Thông tin danh mục -->
            <div class="card mt-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-info-circle"></i> Thông tin danh mục</h6>
                </div>
                <div class="card-body">
                    <h6>@Model.Category.Title</h6>
                    @if (!string.IsNullOrEmpty(Model.Category.Description))
                    {
                        <p class="text-muted small">@Model.Category.Description</p>
                    }
                    <div class="text-muted small">
                        <i class="fas fa-newspaper"></i> @Model.TotalItems bài viết
                    </div>
                </div>
            </div>
        </div>

        <!-- Nội dung chính -->
        <div class="col-lg-9 col-md-8">
            <!-- Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <h1 class="h2 mb-3">@Model.Category.Title</h1>
                    @if (!string.IsNullOrEmpty(Model.Category.Description))
                    {
                        <p class="text-muted">@Model.Category.Description</p>
                    }
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted">
                            <i class="fas fa-newspaper"></i> @Model.TotalItems bài viết
                        </span>
                        <span class="text-muted">
                            Trang @Model.CurrentPage / @Model.TotalPages
                        </span>
                    </div>
                    <hr>
                </div>
            </div>

            <!-- Danh sách bài viết -->
            @if (Model.Posts.Any())
            {
                <div class="row">
                    @foreach (var post in Model.Posts)
                    {
                        <div class="col-lg-6 col-md-12 mb-4">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(post.Thumbnail))
                                {
                                    <img src="/Uploads/@post.Thumbnail" class="card-img-top" alt="@post.Title" 
                                         style="height: 200px; object-fit: cover;">
                                }
                                <div class="card-body d-flex flex-column">
                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar"></i> @post.Createat.ToString("dd/MM/yyyy")
                                        </small>
                                    </div>
                                    <h5 class="card-title">
                                        <a href="@Url.Action("Detail", new { alias = post.Alias_url?.Split('/').LastOrDefault() })" 
                                           class="text-decoration-none text-dark">
                                            @post.Title
                                        </a>
                                    </h5>
                                    @if (!string.IsNullOrEmpty(post.Descriptionshort))
                                    {
                                        <p class="card-text text-muted flex-grow-1">
                                            @(post.Descriptionshort.Length > 120 ? post.Descriptionshort.Substring(0, 120) + "..." : post.Descriptionshort)
                                        </p>
                                    }
                                    <div class="mt-auto">
                                        <a href="@Url.Action("Detail", new { alias = post.Alias_url?.Split('/').LastOrDefault() })" 
                                           class="btn btn-primary btn-sm">
                                            <i class="fas fa-eye"></i> Xem chi tiết
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Phân trang -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Phân trang">
                        <ul class="pagination justify-content-center">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Category", new { categoryAlias = Model.Category.link_alias, page = Model.CurrentPage - 1 })">
                                        <i class="fas fa-chevron-left"></i> Trước
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Category", new { categoryAlias = Model.Category.link_alias, page = i })">@i</a>
                                </li>
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Category", new { categoryAlias = Model.Category.link_alias, page = Model.CurrentPage + 1 })">
                                        Sau <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h4>Chưa có bài viết nào</h4>
                    <p class="text-muted">Danh mục "@Model.Category.Title" hiện tại chưa có bài viết nào.</p>
                    <a href="@Url.Action("Index")" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> Quay lại tất cả hoạt động
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Smooth scroll cho các liên kết anchor
        $('a[href^="#"]').on('click', function(event) {
            var target = $($(this).attr('href'));
            if(target.length) {
                event.preventDefault();
                $('html, body').animate({
                    scrollTop: target.offset().top - 80
                }, 1000);
            }
        });
    </script>
}
