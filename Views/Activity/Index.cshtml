@model websitebenhvien.Models.EnitityVM.ActivityIndexPageVM
@{
    ViewData["Title"] = "Hoạt động bệnh viện";
}
<div class="container mt-4">
    <div class="row">
        <!-- Sidebar -->
        <aside class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-gradient text-white d-flex align-items-center" 
                     style="background: linear-gradient(135deg, #007bff, #0056b3);">
                    <i class="fas fa-th-large me-2 text-danger fw-bold"></i>
                    <h6 class="mb-0 text-uppercase text-danger fw-bold">Danh mục hoạt động</h6>
                </div>
                <div class="list-group list-group-flush">
                   
                    @await Component.InvokeAsync("Danhmuchoatdong")
                </div>
            </div>
        </aside>

        <!-- Main content -->
        <main class="col-md-9">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb bg-light p-2 rounded">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none"><i class="fas fa-home me-1"></i>Trang chủ</a></li>
                    <li class="breadcrumb-item">
                        @if (!string.IsNullOrEmpty(Model.SearchTerm))
                        {
                            <span>Tìm kiếm: @Model.SearchTerm</span>
                        }
                        else
                        {
                            <span>Hoạt động bệnh viện</span>
                        }
                    </li>
                </ol>
            </nav>

            <!-- Title -->
            <h2 class="mb-4 fw-bold text-primary border-bottom pb-2">
                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <span>Kết quả tìm kiếm: @Model.SearchTerm</span>
                }
                else
                {
                    <span>Hoạt động bệnh viện</span>
                }
            </h2>

            <!-- Activity list -->
            <div class="row g-3" id="activityList">
                @if (Model.Posts.Any())
                {
                    @foreach (var post in Model.Posts)
                    {
                        <div class="col-md-4">
                            <div class="card h-100 border-0 shadow-sm rounded-3 post-card">
                                <div class="position-relative">
                                    @if (!string.IsNullOrEmpty(post.Thumbnail))
                                    {
                                        <img src="/Uploads/@post.Thumbnail" class="card-img-top rounded-top" alt="@post.Title"
                                            style="height: 200px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center rounded-top" style="height: 200px;">
                                            <i class="fas fa-image fa-3x text-muted"></i>
                                        </div>
                                    }
                                    @{
                                        var today = new DateTime(DateTime.Now.Year, DateTime.Now.Month, DateTime.Now.Day);
                                        var postDate = new DateTime(post.Createat.Year, post.Createat.Month, post.Createat.Day);
                                        var isNew = today == postDate;
                                    }
                                    @if (isNew)
                                    {
                                        <span class="badge bg-danger position-absolute top-0 end-0 m-2 animate__animated animate__pulse animate__infinite">Mới</span>
                                    }
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title fw-semibold text-truncate-2">@post.Title</h6>
                                    <p class="text-muted small mb-2"><i class="far fa-calendar-alt me-1"></i>@post.Createat.ToString("dd/MM/yyyy")</p>
                                    @if (!string.IsNullOrEmpty(post.Descriptionshort))
                                    {
                                        <p class="card-text text-muted small mb-3 text-truncate-3">
                                            @(post.Descriptionshort.Length > 80 ? post.Descriptionshort.Substring(0, 80) + "..." : post.Descriptionshort)
                                        </p>
                                    }
                                    <a href="@Url.Action("Detail", new { alias = post.Alias_url?.Split('/').LastOrDefault() })" 
                                       class="btn btn-outline-primary btn-sm mt-auto rounded-pill">
                                        Xem chi tiết <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="text-center py-5">
                            <i class="fas fa-search fa-4x text-muted mb-3"></i>
                            <h4 class="fw-bold mb-2">
                                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                                {
                                    <span>Không tìm thấy kết quả</span>
                                }
                                else
                                {
                                    <span>Chưa có hoạt động nào</span>
                                }
                            </h4>
                            <p class="text-muted">
                                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                                {
                                    <span>Không tìm thấy hoạt động nào với từ khóa "<strong>@Model.SearchTerm</strong>"</span>
                                }
                                else
                                {
                                    <span>Hiện tại chưa có hoạt động nào được đăng tải</span>
                                }
                            </p>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1, search = Model.SearchTerm })">«</a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i, search = Model.SearchTerm })">@i</a>
                            </li>
                        }

                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1, search = Model.SearchTerm })">»</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </main>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        // Any initialization code for activity page can go here
        console.log('Activity page loaded');
    });
</script>

<style>
    /* Giới hạn 2 dòng tiêu đề */
    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    /* Giới hạn 3 dòng mô tả */
    .text-truncate-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    /* Card hover */
    .post-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .post-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.15);
    }
</style>
}
